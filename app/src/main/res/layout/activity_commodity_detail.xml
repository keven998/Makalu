                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_shop" />

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_text_ii"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_loc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/color_text_ii"
                    android:textSize="14sp" />

                <com.xuejian.client.lxp.common.widget.TagView.TagListView
                    android:id="@+id/tag_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    f:horizontalSpace="6dp"
                    f:orientation="horizontal"
                    f:verticalSpace="4dp" />

                <LinearLayout
                    android:id="@+id/ll_service_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_service" />

                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_talk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/base_color_white"
            android:drawableLeft="@drawable/icon_store_talk"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/talk_to_busness"
            android:textColor="@color/color_text_ii"
            android:textSize="17sp" />

        <View
            android:layout_width="1px"
            android:layout_height="62dp"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/base_color_white"
            android:drawableLeft="@drawable/icon_shop"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/to_store"
            android:textColor="@color/color_text_ii"
            android:textSize="17sp" />

        <View
            android:layout_width="1px"
            android:layout_height="62dp"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_submit_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/price_color"
            android:gravity="center"
            android:text="@string/pay_now"
            android:textColor="@color/base_color_white"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/base_color_white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon_meng" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="您查看的商品已经下架啦！"
            android:textColor="@color/color_text_iii"
            android:textSize="16dp" />
    </LinearLayout>

    <include layout="@layout/error_page" />
</FrameLayout>