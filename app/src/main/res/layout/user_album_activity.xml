<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    >

    <com.xuejian.client.lxp.module.my.adapter.PictureAdapter
        android:id="@+id/albumviewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <RelativeLayout
        android:id="@+id/album_item_header_bar"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#11000000"
        android:layout_gravity="top"
        >

        <ImageView
            android:id="@+id/header_bar_photo_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_ic_nav_back" />



        <ImageView
            android:id="@+id/photo_setting"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/selector_profile_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/album_desc_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:background="#11000000"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/page_num_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</FrameLayout>