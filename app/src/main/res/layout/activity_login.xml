<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/main_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_vertical"
        android:background="@color/base_color_white"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="23dp"
            android:textColor="@color/base_text_color_title"
            android:textSize="15sp"
            android:text="账户: "/>

        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:imeOptions="actionNext"
            android:background="@null"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/base_text_color_title"
            android:hint="手机号、昵称"
            android:textColorHint="#aaaaaa"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_vertical"
        android:background="@color/base_color_white"
        android:layout_marginTop="0.8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="23dp"
            android:textColor="@color/base_text_color_title"
            android:textSize="15sp"
            android:text="密码: "/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:background="@null"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:hint="密码"
            android:singleLine="true"
            android:textColorHint="#aaaaaa"
            android:textColor="@color/base_text_color_title"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/base_color_white"
        android:background="@drawable/theme_button_selctor"
        android:text="@string/login"/>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textSize="13sp"
        android:textColor="@color/app_theme_color"
        android:layout_gravity="right"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="35dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/base_divider_color"
            ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/app_backgroud"
            android:text="微信快速登录"
            android:textColor="@color/base_text_color_text_hint"
            android:textSize="14sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/btn_weixin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_weixin_login_selector"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>