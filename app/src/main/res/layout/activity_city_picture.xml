<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_black">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="#191919">

            <TextView
                android:id="@+id/tv_title_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/selector_ic_nav_back"
                android:paddingLeft="10dp"
                android:paddingRight="32dp" />

            <TextView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:layout_toRightOf="@id/tv_title_bar_left"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="18sp" />

            <CheckedTextView
                android:id="@+id/tv_title_bar_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="10dp"
                android:text="编辑"
                android:visibility="gone"
                android:textColor="@color/selector_white_text_color"
                android:textSize="16sp" />

        </RelativeLayout>

        <GridView
            android:id="@+id/gv_city_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:horizontalSpacing="1dp"
            android:listSelector="@null"
            android:numColumns="3"
            android:padding="1dp"
            android:scrollbarStyle="outsideOverlay"
            android:verticalSpacing="1dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/zoom_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible">

        <com.aizou.core.widget.HackyViewPager
            android:id="@+id/vp_zoom_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>


</RelativeLayout>