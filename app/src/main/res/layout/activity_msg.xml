<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/base_color_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/tab_bar_color">

        <ImageView
            android:id="@+id/iv_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="30dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_left_white"/>

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="备注"
            android:textColor="@color/base_color_white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="14dp"
            android:scaleType="center"
            android:src="@drawable/icon_edit_plan"
            android:visibility="gone"/>
    </RelativeLayout>
<EditText
    android:lines="7"
    android:gravity="top|left"
    android:padding="5dp"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/editor_with_border"
    android:id="@+id/et_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:text="保存"
        android:textSize="16sp"
        android:textColor="@color/base_color_white"
        android:gravity="center"
        android:background="@drawable/bg_common_theme_color_solid"
        android:layout_height="50dp"/>
</LinearLayout>