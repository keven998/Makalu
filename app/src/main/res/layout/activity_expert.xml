<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backgroud"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background"
        >

        <TextView
            android:id="@+id/expert_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/nav_back_normal"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:layout_gravity="left|center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="旅行达人"
            android:textColor="@color/base_font_color"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/expert_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:drawableRight="@drawable/navigation_filter"
            android:paddingRight="13dp"
            android:paddingLeft="30dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_title_color"
            android:layout_gravity="bottom"/>

    </FrameLayout>

    <!--<EditText
        android:id="@+id/search_expert_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/navigation_surch"
        android:gravity="center"
        android:hint="姓名或拼音首字母"
        android:textSize="15sp"
        android:background="@drawable/search_box_half_radius"
        android:textColor="@color/search_edit_text_hint_color"
        android:layout_gravity="center_horizontal"
        />-->

    <ListView
        android:id="@+id/expert_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:dividerHeight="0.8dp"
        />

</LinearLayout>
