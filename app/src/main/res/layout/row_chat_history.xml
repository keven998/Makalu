<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bar"
    android:id="@+id/list_item_layout"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true" >

      <ImageView
            android:id="@+id/avatar"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_placeholder" />

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/red_circle"
            android:textSize="11sp"
            android:gravity="center"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/avatar_container"
        android:textColor="@color/base_text_color_subtitle"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/base_text_color_text_hint"
        android:textStyle="italic"
        android:textSize="10sp" />

    <!--<ImageView-->
        <!--android:id="@+id/msg_state"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:layout_marginLeft="7dp"-->
        <!--android:layout_toRightOf="@id/avatar_container"-->
        <!--android:src="@drawable/msg_state_fail_resend"-->
        <!--android:visibility="gone" />-->

    <TextView
        android:id="@+id/message"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/avatar_container"
        android:background="@drawable/talk_pop_point_left"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="3dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="7dp"
        android:textColor="@color/base_color_white"
        android:textSize="12sp" />

</RelativeLayout>