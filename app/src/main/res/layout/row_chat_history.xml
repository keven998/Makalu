<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@drawable/option_cell_selector"
    android:gravity="center_vertical"
    android:paddingLeft="12dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_home_talklist_default_avatar" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/avatar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="160dp"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/bg_history_unread_msg"
            android:gravity="center"
            android:minWidth="20dp"
            android:textColor="@color/base_color_white"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/avatar"
        android:drawablePadding="5dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/color_text_iii"
        android:textSize="14sp" />

</RelativeLayout>