<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_color_white">

        <TextView
            android:id="@+id/tv_title_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/add_contact"
            android:paddingLeft="12dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="Talk"
            android:textColor="@color/base_font_color"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/btn_container_address_list"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/btn_address_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_contacts"
                android:focusable="false"
                android:scaleType="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/unread_address_number"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_unread_msg"
                android:gravity="center"
                android:minWidth="16dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/base_color_white"
                android:textSize="12sp"
                android:visibility="visible" />

         </RelativeLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_title_color"
        />

    <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/base_divider_color"
            android:dividerHeight="0.75dp"
            android:listSelector="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/start_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_new_talk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="桃·Talk\n你的旅行朋友圈"
            android:textColor="@color/base_text_color_text_hint"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>