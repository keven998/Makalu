<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="为了账户安全和使用方便，建议您绑定手机号"
        android:layout_marginTop="42dp"
        android:textSize="10sp"
        android:textColor="@color/tips_text_gray_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/base_color_white"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:textColor="@color/base_text_color_title"
            android:text="手机号: "/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:hint="输入要绑定的手机号"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/btn_time_down"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_theme_secondary_selector"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="15sp"
            android:textColor="#f5f5f5"
            android:text="获取验证码"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/base_color_white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_yzm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingRight="0dp"
            android:textColor="@color/base_text_color_title"
            android:text="验证码: "/>

        <EditText
            android:id="@+id/et_sms"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:layout_toRightOf="@+id/title_yzm"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:hint="输入短信验证码"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:layout_gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            />


    </RelativeLayout>

   <!-- <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="@color/base_color_white"
        android:background="@drawable/theme_button_selctor"/>-->

</LinearLayout>