<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/tab_bar_color">

        <ImageView
            android:id="@+id/iv_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="30dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_left_white" />

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/choise_country"
            android:textColor="@color/base_color_white"
            android:textSize="18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/title_bar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_backgroud"
        android:orientation="vertical">

        <ListView
            android:id="@id/id_stickynavlayout_innerscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:descendantFocusability="afterDescendants"
            android:divider="@color/color_line"
            android:dividerHeight="1px"
            android:focusable="true"
            android:listSelector="@android:color/transparent" />

        <com.aizou.core.widget.SideBar
            android:id="@+id/sb_index"
            android:layout_width="16dp"
            android:layout_height="384dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true" />

        <TextView
            android:id="@+id/dialog"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_sub_theme"
            android:gravity="center"
            android:textColor="@color/base_color_white"
            android:textSize="28sp"
            android:visibility="gone" />

    </RelativeLayout>
</merge>
