<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@drawable/option_cell_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/group_del_icon"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:paddingLeft="18dp"
        android:paddingRight="0dp"
        android:scaleType="center"
        android:src="@drawable/ic_member_delete"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/round_avatar_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_more_avatar_unknown_round"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:ellipsize="end"
            android:gravity="left"
            android:maxEms="20"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:background="@color/color_line" />

    </RelativeLayout>

</LinearLayout>

