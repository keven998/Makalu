<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:background="@drawable/shape_white_dialog"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/base_text_color_title"
        android:padding="14dp"
        />

    <EditText
        android:id="@+id/et_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_peach_edit"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@color/base_color_white"
        android:minLines="3"/>
    
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/app_theme_button_selector"
        android:textColor="@color/base_color_white"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="确定"/>

</LinearLayout>