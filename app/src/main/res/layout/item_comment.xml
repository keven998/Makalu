<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/base_color_white"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:src="@drawable/ic_home_more_avatar_unknown_round"
            android:scaleType="fitXY"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textColor="@color/color_text_ii"
            />
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/color_text_ii"
            android:gravity="right"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <io.techery.properratingbar.ProperRatingBar
        android:id="@+id/rb_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:textSize="12sp"
        app:prb_defaultRating="0"
        app:prb_tickSpacing="2dp"
        app:prb_tickNormalDrawable="@drawable/ic_rating_start_default"
        app:prb_tickSelectedDrawable="@drawable/ic_rating_start_highlight"
        app:prb_totalTicks="5"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:textColor="@color/color_text_ii"/>
    <com.xuejian.client.lxp.common.widget.GridViewForListView
        android:id="@+id/gv_comment_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="20dp"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:numColumns="5"
        />
    <TextView
        android:id="@+id/tv_package"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:textColor="@color/color_text_ii"/>
</LinearLayout>