<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_zoom_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/spot_detail_picture_height">

        <ImageView
            android:id="@+id/iv_poi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="fdsfds"
            android:textColor="@color/base_font_color"
            android:textSize="18sp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/ratingBar_poi"
            style="@style/custom_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_poi_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/tv_poi_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar_poi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="fdsa"
            android:textColor="@color/light_gray_text_color"
            android:textSize="15sp" />


        <View
            android:id="@+id/poi_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_poi_rank"
            android:layout_marginTop="14dp"
            android:background="@color/base_color_line_color" />


        <TextView
            android:id="@+id/sy_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poi_divider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="实用信息"
            android:textColor="@color/base_font_color"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_fee"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sy_tag"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_poi_price"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/poi_money"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_book"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/theme_button_selctor"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="在线预订"
                android:textColor="@color/base_color_white"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_level"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_fee"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_poi_level"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/poi_level"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="等级/评级"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_level"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_map"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="地址"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_address"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/poi_phone"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="电话"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_poi_desc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_phone"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_poi_desc"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_introduction"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="poi简介"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/rl_poi_desc"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="网友点评"
                android:textColor="@color/base_font_color"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_more_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="全部点评"
                android:textColor="@color/third_font_color"
                android:textSize="13sp" />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
