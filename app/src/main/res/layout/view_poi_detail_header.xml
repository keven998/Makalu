<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bar"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_poi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_common_default"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_poi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_poi"
                android:paddingTop="3dp"
                android:layout_toRightOf="@id/iv_poi"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_poi_price"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_poi_name"
                android:layout_toRightOf="@id/iv_poi"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/base_text_color_title" />
            <RatingBar
                android:id="@+id/ratingBar_poi"
                style="@style/custom_small_rating_bar"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_poi_price"
                android:layout_toRightOf="@id/iv_poi"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ratingBar_poi"
                android:layout_toRightOf="@id/iv_poi"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_unfav" />
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/base_text_color_title"
            android:textSize="13sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="地址"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textColor="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_navigation_normal"
            android:textColor="@color/base_text_color_subtitle"
            android:layout_marginTop="3dp"
            android:textSize="13sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="简介"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/app_theme_color" />

        <com.aizou.core.widget.expandabletextview.ExpandableTextView
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/expand_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            expandableTextView:animDuration="200"
            expandableTextView:maxCollapsedLines="4">

            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/base_text_color_subtitle"
                android:textSize="13sp" />

            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_gravity="right|bottom"
                android:paddingLeft="100dp"
                android:scaleType="center"
                android:background="@null" />
        </com.aizou.core.widget.expandabletextview.ExpandableTextView>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.75dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/base_divider_color"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="网友推荐"
            android:textColor="@color/app_theme_color"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_delete" />


</RelativeLayout>