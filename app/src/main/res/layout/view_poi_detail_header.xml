<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:foreground="@drawable/fg_mock_up">

                <ImageView
                    android:id="@+id/iv_poi"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_common_default"
                    android:scaleType="centerCrop" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_poi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:textColor="@color/base_color_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_poi_fav_normal" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingTop="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_poi_share_selector" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="25dp">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/ratingBar_poi"
                    style="@style/custom_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/tv_poi_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="热度排名"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:id="@+id/div"
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/ll_left"
                android:background="@color/base_divider_color" />


            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/div"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="10dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/normal_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_addr"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/div"
                android:drawableLeft="@drawable/ic_poi_tel"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/normal_text_color"
                android:textSize="13sp" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <com.aizou.peachtravel.common.widget.autofixtv.AutofitTextView
                android:id="@+id/tv_poi_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:singleLine="true"
                autofit:minTextSize="10sp"
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/btn_book"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/theme_button_selctor"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:text="在线预订"
                android:layout_gravity="right"
                android:textColor="@color/base_color_white"
                android:textSize="16sp" />
            </LinearLayout>

        <TextView
            android:id="@+id/tv_poi_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="13sp" />


        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/attr_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_attr_dots"
                android:gravity="center_vertical"
                android:text="网友点评"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />

            <View
                android:layout_width="50dp"
                android:layout_height="0.75dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@id/attr_tel"
                android:background="@color/base_divider_color" />

            <View
                android:layout_width="50dp"
                android:layout_height="0.75dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/attr_tel"
                android:background="@color/base_divider_color" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_comment_top_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_quotation_l"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_poi_box"
                android:gravity="center"
                android:text="店铺\n简介"
                android:textColor="@color/app_theme_color_secondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.aizou.core.widget.expandabletextview.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                expandableTextView:animAlphaStart="1"
                expandableTextView:animDuration="200"
                expandableTextView:collapseDrawable="@drawable/collapase_drawable"
                expandableTextView:expandDrawable="@drawable/expand_drawable"
                expandableTextView:maxCollapsedLines="4">

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@null"
                    android:paddingBottom="10dp"
                    android:paddingLeft="100dp"
                    android:scaleType="center" />
            </com.aizou.core.widget.expandabletextview.ExpandableTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_poi_box"
                android:gravity="center"
                android:text="网友\n推荐"
                android:textColor="@color/app_theme_color_secondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/base_text_color_subtitle"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>