<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/base_color_white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_poi"
            android:layout_width="fill_parent"
            android:layout_height="200dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/main_color"/>
        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/ratingBar_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"/>
        <TextView
            android:id="@+id/tv_poi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.aizou.core.widget.expandabletextview.ExpandableTextView
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/expand_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            expandableTextView:animDuration="200"
            expandableTextView:maxCollapsedLines="2"
            android:padding="10dp"
            android:background="@color/base_color_white"
           >

            <TextView
                android:layout_marginTop="10dp"
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp" />

            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent" />
        </com.aizou.core.widget.expandabletextview.ExpandableTextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/base_color_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/base_color_white"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="网友推荐"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_rec_some"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            />

    </LinearLayout>


</LinearLayout>