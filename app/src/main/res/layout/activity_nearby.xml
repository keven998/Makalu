<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <com.aizou.core.widget.pagerIndicator.indicator.ScrollIndicatorView
        android:id="@+id/nearby_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_backgroud"
        ></View>

    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/nearby_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#a0000000">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="@color/base_color_white"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_gravity="center_vertical"/>

        <ImageButton android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:scaleType="center"
            android:background="@null"
            android:src="@drawable/selecter_ic_refreash_18"/>

        <!--<ProgressBar-->
            <!--android:id="@+id/pb_location"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:visibility="gone"-->
            <!--style="?android:attr/progressBarStyleSmall"-->
            <!--/>-->

        <!--<Button-->
            <!--android:id="@+id/btn_refresh"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="13sp"-->
            <!--android:text="刷新" />-->
    </LinearLayout>


</LinearLayout>