<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aizou.core.widget.pagerIndicator.indicator.ScrollIndicatorView
        android:id="@+id/nearby_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@drawable/bg_titlebar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_color_white">

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="18sp"
            android:text="身边"
            android:textColor="@color/base_color_black"/>

        <ImageView
            android:id="@+id/tv_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:minWidth="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@drawable/selector_ic_nav_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/app_theme_color_secondary"/>

    </FrameLayout>

    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/nearby_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nearby_indicator"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#a0000000">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="@color/base_color_white"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_gravity="center_vertical"/>

        <ImageButton android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:scaleType="center"
            android:background="@null"
            android:src="@drawable/selecter_ic_refreash_18"/>

    </LinearLayout>


</RelativeLayout>