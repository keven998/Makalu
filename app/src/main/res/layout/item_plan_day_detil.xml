<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/base_color_white">

   <ImageView
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:id="@+id/iv_poi_img"
       android:layout_margin="5dp"
       android:scaleType="centerCrop"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"/>

    <TextView android:id="@+id/tv_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_i"
        android:textSize="17sp"
        android:layout_toRightOf="@id/iv_poi_img"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:gravity="left"/>

    <TextView
        android:id="@+id/tv_poi_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_theme_color"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/plan_bottom_flower"
        android:layout_alignParentBottom="true"
        android:text="99"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:layout_toRightOf="@id/iv_poi_img"
        android:lineSpacingExtra="5dp"
        android:gravity="left|center_vertical"/>


    <TextView android:id="@+id/tv_poi_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_iii"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:layout_toRightOf="@id/tv_poi_level"
        android:lineSpacingExtra="5dp"
        android:gravity="left|center_vertical"/>

</RelativeLayout>
