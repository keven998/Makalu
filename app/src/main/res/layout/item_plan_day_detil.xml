<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_cell_selector"
    android:paddingLeft="12dp"
    android:paddingTop="5dp">

    <FrameLayout
        android:id="@+id/tv_poi_save_level"
        android:layout_width="22dp"
        android:layout_height="29dp"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poi_save_level_bg"
            />


        <TextView
            android:id="@+id/tv_poi_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxEms="4"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textColor="@color/app_theme_color"
            android:textSize="8sp" />

    </FrameLayout>


    <ImageView
        android:id="@+id/iv_poi_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/tv_poi_save_level"
        android:scaleType="centerCrop" />

    <!--<Button-->
        <!--android:id="@+id/btn_send1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="32dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:background="@drawable/selecter_theme_btn_radius_4"-->
        <!--android:text="收藏"-->
        <!--android:textColor="@color/base_color_white"-->
        <!--android:textSize="13sp"-->
        <!--android:visibility="gone"-->
        <!--/>-->
    <CheckedTextView
        android:id="@+id/btn_send"
        android:layout_width="54dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/cell_selecter_btn"
        android:text="收藏"
        android:visibility="gone"
        android:textColor="@color/app_theme_color"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/tv_poi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn_send"
        android:layout_toRightOf="@id/iv_poi_img"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:textColor="@color/color_text_ii"
        android:textSize="16sp" />

    <!--<TextView
        android:id="@+id/tv_poi_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_poi_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_poi_img"
        android:drawableLeft="@drawable/plan_bottom_flower"
        android:drawablePadding="1dp"
        android:gravity="left"
        android:maxEms="4"
        android:textColor="@color/app_theme_color"
        android:textSize="13sp" />-->

    <TextView
        android:id="@+id/tv_poi_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_poi_title"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/btn_send"
        android:layout_toRightOf="@id/iv_poi_img"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/color_text_iii"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_poi_img"
        android:background="@color/color_line"
        android:layout_marginTop="5dp"/>

</RelativeLayout>


