<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_cell_selector"
    android:paddingLeft="12dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_poi_img"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <!--<Button-->
        <!--android:id="@+id/btn_send1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="32dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:background="@drawable/selecter_theme_btn_radius_4"-->
        <!--android:text="收藏"-->
        <!--android:textColor="@color/base_color_white"-->
        <!--android:textSize="13sp"-->
        <!--android:visibility="gone"-->
        <!--/>-->
    <CheckedTextView
        android:id="@+id/btn_send"
        android:layout_width="46dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/selecter_theme_btn_radius_4"
        android:text="收藏"
        android:visibility="gone"
        android:textColor="@color/base_color_white"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/tv_poi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/btn_send"
        android:layout_toRightOf="@id/iv_poi_img"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/color_text_i"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_poi_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_poi_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_poi_img"
        android:drawableLeft="@drawable/plan_bottom_flower"
        android:drawablePadding="1dp"
        android:gravity="left"
        android:maxEms="4"
        android:textColor="@color/app_theme_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_poi_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_poi_img"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn_send"
        android:layout_toRightOf="@id/tv_poi_level"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/color_text_iii"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_poi_time"
        android:background="@color/color_line"
        android:layout_marginTop="10dp"/>

</RelativeLayout>


