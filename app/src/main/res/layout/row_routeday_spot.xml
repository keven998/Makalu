<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_frame_white_card"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_guide_delete"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/spot_image_iv"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/app_backgroud"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/spot_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/spot_image_iv"
                android:layout_toRightOf="@id/spot_image_iv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-4dp"
                android:maxLines="2"
                android:textColor="@color/base_text_color_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/spot_time_cost_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/spot_image_iv"
                android:layout_toRightOf="@id/spot_image_iv"
                android:drawableLeft="@drawable/ic_time"
                android:layout_marginLeft="15dp"
                android:drawablePadding="2dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:textColor="@color/base_text_color_text_placeholder"
                android:textSize="11sp"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:visibility="gone">
            <Button
                android:id="@+id/drag_nearby_btn"
                android:layout_width="55dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@drawable/checker_cell_frame_bg"
                android:text="周边"
                android:textColor="@color/main_botton_text_color"
                android:textSize="12sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_line_edit_drag"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>