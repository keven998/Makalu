<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="62dp"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/app_backgroud"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_backgroud"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical"
                android:background="@color/base_color_white"
                android:textColor="@color/color_text_ii"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/base_color_white"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="选择套餐"
                    android:textColor="@color/color_text_ii" />
            </RelativeLayout>

            <ListView
                android:background="@color/base_color_white"
                android:id="@+id/lv_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0px" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:id="@+id/date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/departure_date"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/date_title"
                    android:textColor="@color/app_theme_color" />

                <TextView
                    android:id="@+id/tv_select_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_gray"
                    android:drawableLeft="@drawable/icon_date_pick"
                    android:drawablePadding="2dp"
                    android:padding="4dp"
                    android:text="@string/select_date"
                    android:textColor="@color/color_text_iii" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />

            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="购买数量"
                    android:textColor="@color/color_text_ii" />

                <com.xuejian.client.lxp.common.widget.NumberPicker
                    android:id="@+id/select_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:id="@+id/unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="商品单价"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="2dp"
                    android:text="¥0.00"
                    android:padding="4dp"
                    android:textColor="@color/color_text_iii" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="旅客信息"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_add_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/add_user_info"
                    android:textColor="@color/app_theme_color" />
                <TextView
                    android:id="@+id/tv_edit_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/edit"
                    android:visibility="gone"
                    android:textColor="@color/color_text_ii" />
            </RelativeLayout>

            <ListView
                android:background="@color/base_color_white"
                android:id="@+id/lv_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />

            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="联系人信息"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_address_book"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/select__contact"
                    android:textColor="@color/app_theme_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/dash_line_green"
                android:hardwareAccelerated="false"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/base_color_white"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="姓(英文)"
                            android:textColor="@color/color_text_iii" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icon_needed" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:hint="Last Name,如Zhang"
                        android:textColorHint="@color/color_text_v"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="名(英文)"
                            android:textColor="@color/color_text_iii" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icon_needed" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:hint="First Name,如Xiaoxiao"
                        android:textColorHint="@color/color_text_v"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="电话"
                            android:textColor="@color/color_text_iii" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icon_needed" />
                        <TextView
                            android:id="@+id/tv_dialCode"
                            android:text="+86"
                            android:layout_marginLeft="27dp"
                            android:gravity="center"
                            android:background="@drawable/bg_common"
                            android:textColor="@color/color_text_ii"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_tel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="125dp"
                        android:layout_marginRight="10dp"
                        android:inputType="phone"
                        android:hint="电话号码"
                        android:textColorHint="@color/color_text_v"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="留言"
                            android:textColor="@color/color_text_iii" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|top"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common"
                        android:lines="4" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <CheckedTextView
                android:id="@+id/ctv_1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/base_color_white"
                android:drawableLeft="@drawable/checker_for_checkbox"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:textColorLink="@color/app_theme_color"
                android:textColor="@color/color_text_iii"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#cccccc"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="¥0.00"
            android:textColor="@color/base_color_white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_submit_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/price_color"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/base_color_white"
            android:textSize="19sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/tab_bar_color">

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_arrow_left_white"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/strategy_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/order_input"
            android:textColor="@color/base_color_white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_copy_guide"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_copy"
            android:gravity="center_vertical|right"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:singleLine="true"
            android:textColor="@color/selector_white_text_color"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>
</FrameLayout>