<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aizou.peachtravel.common.widget.swipelistview.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <LinearLayout android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="142dp">
            <ImageButton
                android:id="@+id/delete"
                android:background="@color/app_theme_color_secondary"
                android:src="@drawable/ic_guide_archieve"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/base_color_white"/>

            <ImageView android:id="@+id/stand_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:background="#50000000"/>

            <TextView android:id="@+id/tv_local"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignBottom="@id/stand_img"
                android:layout_alignRight="@id/stand_img"
                android:gravity="right|bottom"
                android:textColor="@color/base_color_white"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"/>

            <TextView android:id="@+id/tv_title"
                android:layout_width="@dimen/my_plan_title_width"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_guide_title"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/base_color_white"/>

            <TextView android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:textColor="#fe959e"
                android:layout_alignParentRight="true"/>

            <TextView android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:textSize="12sp"
                android:textColor="@color/base_text_color_subtitle"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/stand_img"
                android:lineSpacingExtra="2dp"
                android:lines="4"
                android:gravity="top|left"
                android:ellipsize="end"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/base_text_color_text_placeholder"
                android:paddingRight="10dp"
                android:paddingBottom="6dp"
                android:drawableLeft="@drawable/ic_clock_1"
                android:drawablePadding="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </com.aizou.peachtravel.common.widget.swipelistview.SwipeLayout>

</FrameLayout>
