<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aizou.peachtravel.common.widget.swipelistview.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="142dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/app_theme_color_secondary"
                android:scaleType="center"
                android:src="@drawable/ic_guide_archieve_normal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/base_color_white" />

            <ImageView
                android:id="@+id/stand_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/tv_local"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/stand_img"
                android:layout_alignRight="@id/stand_img"
                android:gravity="right|bottom"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/base_color_white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:textColor="#fe959e"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="39dp"
                android:layout_toRightOf="@id/stand_img"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lineSpacingExtra="2dp"
                android:lines="4"
                android:textColor="@color/base_text_color_subtitle"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_clock_1"
                android:drawablePadding="1dp"
                android:paddingBottom="6dp"
                android:paddingRight="10dp"
                android:textColor="@color/base_text_color_text_placeholder"
                android:textSize="9sp" />

            <RelativeLayout
                android:id="@+id/rl_send"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="11dp"
                >

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/selecter_theme_btn_radius_4"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:text="发送"
                    android:textColor="@color/base_color_white"
                    android:textSize="13sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/my_plan_title_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_guide_title"
                android:ellipsize="end"
                android:paddingBottom="1dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="15sp" />

        </RelativeLayout>


    </com.aizou.peachtravel.common.widget.swipelistview.SwipeLayout>

</FrameLayout>
