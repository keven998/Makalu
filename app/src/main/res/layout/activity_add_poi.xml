<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_color_white">

        <FrameLayout android:id="@+id/lyt_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:paddingLeft="5dp"
            android:paddingRight="15dp">
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:duplicateParentState="true"
                android:clickable="false"
                android:background="@null"
                android:textColor="@color/app_theme_color"
                android:text="确定" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="100dp"
            android:layout_toRightOf="@id/lyt_btn_ok"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/base_text_color_title"/>


        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filter_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
        />

        <!--<Spinner
            android:id="@+id/type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:paddingRight="5dp"
            android:dropDownVerticalOffset="38dp" />

        <Spinner
            android:id="@+id/loc_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/type_spinner"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:paddingRight="5dp"
            android:dropDownVerticalOffset="38dp" />
            android:dropDownVerticalOffset="0dp" />-->


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/app_theme_color"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/base_color_white"
        android:padding="11dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:hint="输入关键字"
            android:textColor="@color/base_text_color_title"
            android:drawablePadding="10dp"
            android:background="@drawable/button_normal_shape"
            android:drawableLeft="@drawable/ic_search" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_theme_secondary_selector"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:textColor="@color/base_color_white"
            android:text="搜索" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <com.aizou.core.widget.prv.PullToRefreshListView
            android:id="@+id/lv_poi_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:visibility="visible"
            android:layout_marginBottom="30dp"/>


        <FrameLayout android:id="@+id/add_poi_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:visibility="visible">

            <HorizontalScrollView android:id="@+id/add_poi_scroll_panel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@color/half_transparent_color"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/poi_add_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="0dp"/>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_border_color"
                />

        </FrameLayout>

    </FrameLayout>


</LinearLayout>