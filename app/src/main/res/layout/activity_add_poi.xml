<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/mm_listitem_simple">

        <Spinner
            android:id="@+id/loc_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"

            />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/app_theme_color"
            android:background="@drawable/btn_complete_selector"
            android:text="完成" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_ok"
            android:minHeight="48dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/base_color_white"
        android:padding="11dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:hint="输入关键字"
            android:textColor="@color/base_text_color_title"
            android:drawablePadding="10dp"
            android:background="@drawable/button_normal_shape"
            android:drawableLeft="@drawable/ic_search" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_normal_shape"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="@color/base_text_color_title"
            android:text="搜索" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <com.aizou.core.widget.prv.PullToRefreshListView
            android:id="@+id/lv_poi_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:visibility="visible" />

    </FrameLayout>


</LinearLayout>