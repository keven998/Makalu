<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_peach_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="15dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/base_color_white"
        android:textSize="18sp"
        android:background="@drawable/bg_peach_dialog_title"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/base_text_color_title"
        android:text="" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/dash"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/base_color_white"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:background="@drawable/theme_button_selctor" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/base_color_white"
            android:textSize="14sp"
            android:background="@drawable/theme_button_selctor" />
    </LinearLayout>

</LinearLayout>