            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_group_name"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/option_cell_selector"
                android:gravity="center_vertical"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text="群聊名称"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_groupName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dip"
                    android:singleLine="true"
                    android:text="群聊名称"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_icon"
                    android:visibility="visible" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:id="@+id/rl_switch_block_groupmsg"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/option_cell_selector"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="消息免打扰"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_switch_block_groupmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/open_icon"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_switch_unblock_groupmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/close_icon"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#E6E6E6" />


            <RelativeLayout
                android:id="@+id/clear_all_history"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/option_cell_selector"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dip"
                    android:text="清空聊天记录"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#E6E6E6" />

            <Button
                android:id="@+id/btn_exit_grp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:background="@drawable/theme_button_selctor"
                android:onClick="exitGroup"
                android:text="退出群聊"
                android:textColor="@color/base_color_white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_exitdel_grp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/theme_button_selctor"
                android:onClick="exitDeleteGroup"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:text="解散群聊"
                android:textColor="@color/base_color_white"
                android:textSize="16sp"
                android:visibility="gone" />


