<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backgroud">

    <TextView android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:textColor="@color/color_text_titlebar"
        android:background="@drawable/bg_navigation_bar"
        android:textSize="@dimen/title_text_size"
        android:text="旅行"
        android:gravity="center"/>

    <FrameLayout android:id="@+id/lxp_search_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tools_search_bar_height"
        android:layout_margin="10dp"
        android:background="@color/base_color_white"
        android:layout_below="@id/title_view">

        <ImageView 
            android:layout_width="match_parent"
            android:layout_below="@id/title_view"
            android:layout_height="@dimen/tools_search_bar_height"
            android:background="@color/base_color_white"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tools_tool_card_height"
        android:layout_below="@id/lxp_search_bg"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        
        <Button android:id="@+id/lxp_helper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="旅行达人"/>
        
        <Button android:id="@+id/lxp_plan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我的计划"/>

    </LinearLayout>

</RelativeLayout>
