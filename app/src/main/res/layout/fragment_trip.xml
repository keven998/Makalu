<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backgroud">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_color_white">

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="旅行"
            android:textColor="@color/base_text_color_title"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_title_color"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/search_all_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_search"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:hint="目的地、景点、美食、酒店、游记"
        android:textSize="17sp"
        android:background="@drawable/search_white_radius_bg"
        android:textColor="@color/base_text_color_text_placeholder"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/lx_guide_favour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingRight="18dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:drawableLeft="@drawable/ic_share_to_friend"
            android:background="@drawable/option_cell_selector"
            android:drawableRight="@drawable/right_arrow_icon"
            android:text="指路达人"
            android:textColor="@color/base_text_color_title"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="旅行问题问达人"
            android:layout_gravity="right"
            android:paddingTop="15dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/base_text_color_text_placeholder"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/lx_trip_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="18dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:drawableLeft="@drawable/ic_share_to_friend"
        android:background="@drawable/option_cell_selector"
        android:drawableRight="@drawable/right_arrow_icon"
        android:text="旅行计划"
        android:textColor="@color/base_text_color_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lx_around"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="18dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:drawableLeft="@drawable/ic_share_to_friend"
        android:background="@drawable/option_cell_selector"
        android:drawableRight="@drawable/right_arrow_icon"
        android:text="身边哪儿好玩"
        android:textColor="@color/base_text_color_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lx_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="18dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:drawableLeft="@drawable/ic_share_to_friend"
        android:background="@drawable/option_cell_selector"
        android:drawableRight="@drawable/right_arrow_icon"
        android:text="目的地"
        android:textColor="@color/base_text_color_title"
        android:textSize="18sp" />

</LinearLayout>
