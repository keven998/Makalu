<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud">

    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:id="@+id/poi_filter_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="分类"
            android:textColor="@color/base_font_color"
            android:layout_marginLeft="12dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <CheckedTextView
                android:id="@+id/poi_filter_spot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/type_bg_checker"
                android:text="景点"
                android:gravity="center"
                android:textColor="@color/second_font_color"
                android:textSize="14sp"
                android:layout_marginRight="0.8dp"
                />

            <CheckedTextView
                android:id="@+id/poi_filter_food"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/type_bg_checker"
                android:text="美食"
                android:gravity="center"
                android:textColor="@color/second_font_color"
                android:textSize="14sp"
                android:layout_marginRight="0.8dp"
                />

            <CheckedTextView
                android:id="@+id/poi_filter_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/type_bg_checker"
                android:text="购物"
                android:gravity="center"
                android:textColor="@color/second_font_color"
                android:textSize="14sp"
                android:layout_marginRight="0.8dp"
                />

            <CheckedTextView
                android:id="@+id/poi_filter_hotel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/type_bg_checker"
                android:text="酒店"
                android:gravity="center"
                android:textColor="@color/second_font_color"
                android:textSize="14sp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="城市"
            android:textColor="@color/base_font_color"
            android:layout_marginLeft="12dp"
            />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/poi_city_list"
            />


    </LinearLayout>

</LinearLayout>