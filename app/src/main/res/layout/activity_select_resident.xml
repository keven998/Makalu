<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />
    <!--<EditText
        android:id="@+id/et_search"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_search"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="5dp"
        android:hint="@string/please_input_city_name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/base_text_color_subtitle"
        android:textColorHint="@color/base_text_color_text_hint"
        android:textSize="14sp" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="定位当前位置"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:textColor="@color/color_text_ii"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/option_cell_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_loc_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/base_text_color_title"
            android:drawableLeft="@drawable/ic_zuobiao"
            android:drawablePadding="9dp"
            android:textSize="15sp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="国内全部城市"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:textColor="@color/color_text_ii"
        />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ExpandableListView
            android:id="@+id/elv_city"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@android:color/transparent"
            android:childDivider="@color/base_divider_color"
            android:divider="@color/base_divider_color"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:groupIndicator="@null"
            android:listSelector="@android:color/transparent" />
    </FrameLayout>

</LinearLayout>