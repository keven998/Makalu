<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include-->
    <!--android:id="@+id/rl_error_item"-->
    <!--layout="@layout/chat_neterror_item"-->
    <!--android:visibility="gone" />-->


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_backgroud"
        android:listSelector="@null"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"/>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="想去哪旅行\n先和大家来Talk交换意见吧"
            android:textColor="@color/base_text_color_text_hint"
            android:lineSpacingExtra="3dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/start_chat"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/app_theme_button_selector"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="新建Talk"
            android:textColor="@color/base_color_white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>