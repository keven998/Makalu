<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_country"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/talent_loc_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/talent_loc_cell_height"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/talent_loc_cell_height"
        android:scaleType="centerCrop"
        android:src="@drawable/expert_country_list_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/quarter_transparent_color"
            android:padding="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_color_white" />

            <TextView
                android:id="@+id/talent_loc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:background="@color/base_color_white" />

            <TextView
                android:id="@+id/loc_en_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_city_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:background="@drawable/round_corner_bg_withour_solid"
            android:drawableLeft="@drawable/icon_city"
            android:drawablePadding="2dp"
            android:padding="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="24"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </LinearLayout>
</FrameLayout>
