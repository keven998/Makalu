<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rl_basic_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/expert_bg_green"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expert_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/expert_address"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/expert_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expert_zod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/expert_star"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/expert_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_basic_info_panel"
        android:layout_marginBottom="-4dp"
        android:background="@drawable/expert_bg_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expert_pic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-7dp"
            android:background="@drawable/expert_free_online"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_track_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:lines="2"
            android:textColor="@color/color_text_i"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/expert_level" />

    </LinearLayout>

</RelativeLayout>
