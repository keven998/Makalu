<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:padding="5dp"
    android:background="@color/base_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_expert_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:textColor="@color/base_color_white"
            android:background="@drawable/shape_round"
            android:text="V9"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_expert_level"
            android:text="娜美"
            android:padding="5dp"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_expert_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_expert_name"
            android:layout_toRightOf="@+id/tv_expert_level"
            android:text="北京市"
            android:padding="5dp"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_expert_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_expert_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_expert_loc"
            android:text="29"
            android:padding="5dp"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_expert_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textSize="17sp"
        android:text="服务城市： 北京——上海——天津" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon" />
    <TextView
        android:id="@+id/tv_pi_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="派派点评"
        />
</LinearLayout>
