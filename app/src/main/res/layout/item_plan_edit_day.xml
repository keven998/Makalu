<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_drag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_cell_selector">

    <ImageButton
        android:id="@+id/iv_delete_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:paddingBottom="14dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="14dp"
        android:scaleType="center"
        android:src="@drawable/ic_member_delete" />

    <TextView
        android:id="@+id/tv_day_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_delete_day"
        android:background="@drawable/plan_02_bg_day"
        android:gravity="center"
        android:textColor="@color/base_color_white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@id/tv_day_index"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/color_text_i"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_schedule_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_schedule_title"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/tv_day_index"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/color_text_iii"
        android:textSize="10sp" />

</RelativeLayout>
