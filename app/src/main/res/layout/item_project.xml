<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/base_color_white"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:src="@drawable/ic_home_more_avatar_unknown_round"
            android:scaleType="fitXY"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:text="3rwrwr"
            android:textColor="@color/color_text_ii"
            />
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/color_text_ii"
            android:text="wrwrw"
            android:gravity="right"
            android:paddingRight="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_project_info1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="sfdsdfsdf"
            android:textColor="@color/color_text_ii"/>
        <TextView
            android:id="@+id/tv_project_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5日游"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:textColor="@color/color_text_ii"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_project_info2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:text="sfsfsdf"
        android:textSize="14sp"
        android:textColor="@color/color_text_ii"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_project_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="sfdsdfsdf"
            android:textColor="@color/color_text_ii"/>
        <TextView
            android:id="@+id/tv_project_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5日游"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/color_text_ii"/>
    </LinearLayout>
</LinearLayout>