<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_frame_white_card"
        android:padding="10dp">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_toRightOf="@id/image_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_text_color_title"
                android:layout_marginTop="1dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/address_tv"
                android:layout_toRightOf="@id/image_iv"
                android:layout_width="wrap_content"
                android:layout_below="@id/name_tv"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/base_text_color_text_hint"
                android:singleLine="true"
                android:textSize="12sp"/>
        </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/all_result_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_frame_white_card"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:drawablePadding="9dp"
            android:textColor="@color/app_theme_color"
            android:drawableLeft="@drawable/ic_search"
            android:textSize="13sp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="9dp"
            android:text="查看全部结果"/>


    </FrameLayout>



</LinearLayout>