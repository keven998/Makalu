<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_titlebar" >

        <RelativeLayout
            android:id="@+id/ly_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tv_title_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:minWidth="60dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:duplicateParentState="true"
                android:drawableLeft="@drawable/selector_ic_nav_back"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_title_bar_center"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="18sp"
                android:textColor="@color/base_text_color_title"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ly_title_bar_center"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_city_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/city_filter_color"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:background="@drawable/shape_spinner_actionbar_selector"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="筛选城市"
                android:minWidth="70dp"
                android:maxLength="4"
                android:ellipsize="end"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_filter"
                android:duplicateParentState="true"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:gravity="center"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:layout_weight="1">


        <com.aizou.core.widget.prv.PullToRefreshListView
            android:id="@+id/search_type_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:visibility="visible" />


    </FrameLayout>

</LinearLayout>