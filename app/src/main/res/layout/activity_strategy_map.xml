<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/map_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        />

    <com.airbnb.android.airmapview.AirMapView
        android:id="@+id/strategy_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <RelativeLayout
        android:id="@+id/strategy_map_locations"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/base_color_white"
        >

        <HorizontalScrollView
            android:id="@+id/map_days_name_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">



        </HorizontalScrollView>

    </RelativeLayout>

</LinearLayout>