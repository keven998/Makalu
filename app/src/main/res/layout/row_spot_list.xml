<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView android:id="@+id/spot_image_iv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <FrameLayout android:id="@+id/action_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true">

            <CheckedTextView android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:duplicateParentState="true"
                android:background="@drawable/app_theme_button_selector"
                android:drawablePadding="3dp"
                android:text="选择"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/base_color_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </FrameLayout>

        <TextView android:id="@id/spot_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_toRightOf="@id/spot_image_iv"
            android:layout_toLeftOf="@id/action_frame"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignTop="@id/spot_image_iv"/>

        <TextView android:id="@id/spot_time_cost_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/spot_image_iv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:drawableLeft="@drawable/ic_time"
            android:layout_toRightOf="@id/spot_image_iv"
            android:drawablePadding="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/action_frame"
            android:textColor="@color/base_text_color_text_placeholder"/>

        <View android:id="@+id/dot_divider"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@drawable/dash"
            android:layout_below="@id/spot_image_iv"
            android:layout_marginTop="10dp"
            android:layerType="software"/>

        <TextView android:id="@+id/spot_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/base_text_color_subtitle"
            android:lineSpacingExtra="1dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@id/dot_divider"
            android:ellipsize="marquee"
            android:maxLines="2"/>

    </RelativeLayout>

</LinearLayout>