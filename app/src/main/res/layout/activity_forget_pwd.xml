<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <TextView android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="请确保你的手机畅通，接收短信验证码"
        android:textSize="13sp"
        android:textColor="@color/base_text_color_text_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/base_color_white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="23dp"
            android:textColor="@color/base_text_color_title"
            android:text="手机号: "/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:singleLine="true"
            android:hint="账户关联的手机号"
            android:textColorHint="#aaaaaa"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/btn_time_down"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_normal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="12sp"
            android:textColor="@color/base_text_color_text_hint"
            android:textColorHighlight="@color/base_text_color_title"
            android:text="获取验证码"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_vertical"
        android:background="@color/base_color_white"
        android:layout_marginTop="0.8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="23dp"
            android:textColor="@color/base_text_color_title"
            android:textSize="15sp"
            android:text="验证码: "/>

        <EditText
            android:id="@+id/et_sms"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:background="@null"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:hint="短信验证码"
            android:singleLine="true"
            android:textColorHint="#aaaaaa"
            android:textColor="@color/base_text_color_title"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="@color/base_color_white"
        android:background="@drawable/theme_button_selctor"/>

</LinearLayout>