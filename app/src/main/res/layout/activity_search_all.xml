<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="44dp"
        android:gravity="center_vertical"
        android:background="@color/app_theme_color"
        android:focusable="true"
        android:id="@+id/search_bar"
        android:focusableInTouchMode="true"
        android:padding="11dp">

        <!--android:background="@drawable/mm_listitem"-->

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:inputType="text"
            android:textSize="14sp"
            android:textColorHint="@color/base_text_color_text_hint"
            android:hint="城市/景点/美食/购物"
            android:textColor="@color/base_text_color_title"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:background="@drawable/button_normal_shape"
            android:drawableLeft="@drawable/ic_search" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_theme_secondary_selector"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:textColor="@color/base_color_white"
            android:text="搜索" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar">

        <ListView
            android:id="@+id/search_all_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:visibility="gone" />

        <ImageView android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg_default"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="36dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            />
    </FrameLayout>
</RelativeLayout>