<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_titlebar"
        android:padding="11dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:textColorHint="@color/base_text_color_text_hint"
            android:hint="城市、景点、美食购物酒店等"
            android:textColor="@color/base_text_color_title"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:background="@drawable/button_normal_shape"
            android:drawableLeft="@drawable/ic_search" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_normal_shape"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:textColor="@color/base_text_color_subtitle"
            android:text="搜索" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/search_all_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:visibility="visible" />
    </FrameLayout>
</LinearLayout>