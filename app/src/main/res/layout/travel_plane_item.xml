<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backgroud">

    <com.xuejian.client.lxp.common.widget.swipelistview.SwipeLayout
        android:id="@+id/myswipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/swipe_bg_ll"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_alert"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="签到"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/has_add_view"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/swipeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_cell_selector"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/plane_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/travel_hasGone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/qiandao" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/plane_spans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="2天"
                    android:textColor="@color/color_text_i"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/plane_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:textColor="@color/color_text_iii"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/city_hasGone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textColor="@color/color_text_i"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_text_iii"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />
        </LinearLayout>
    </com.xuejian.client.lxp.common.widget.swipelistview.SwipeLayout>

    <RelativeLayout
        android:id="@+id/rl_send"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_send_normal_shape"
        android:gravity="center"
        android:padding="2dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:visibility="gone">

        <CheckedTextView
            android:id="@+id/btn_send"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@color/base_color_white"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/color_text_ii"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>
