<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_group_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@drawable/option_cell_selector"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/tv_groupName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="28dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="群聊名称"
                    android:textColor="@color/second_font_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_icon"
                    android:visibility="gone" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="28dp"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:id="@+id/rl_switch_block_groupmsg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@drawable/option_cell_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="28dp"
                    android:text="消息免打扰"
                    android:textColor="@color/second_font_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_switch_block_groupmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_button_selected"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_switch_unblock_groupmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_button_normal"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#E6E6E6"
                android:layout_marginLeft="28dp"/>


            <RelativeLayout
                android:id="@+id/clear_all_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@drawable/option_cell_selector"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="28dip"
                    android:text="清空聊天记录"
                    android:textColor="@color/second_font_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="28dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_group_dismiss"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@drawable/option_cell_selector"
                android:orientation="horizontal"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/btn_exit_grp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/title_bar_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="38dp"
                    android:paddingRight="38dp"
                    android:background="@null"
                    android:onClick="exitGroup"
                    android:text="退出群聊"
                    android:textColor="@color/second_font_color"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btn_exitdel_grp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/title_bar_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:onClick="exitDeleteGroup"
                    android:background="@null"
                    android:paddingLeft="38dp"
                    android:paddingRight="38dp"
                    android:text="解散群聊"
                    android:textColor="@color/second_font_color"
                    android:textSize="16sp"
                    android:visibility="gone" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="28dp"
                android:background="#E6E6E6" />


            <LinearLayout
                android:id="@+id/ll_group_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@drawable/option_cell_selector"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/tv_add_to_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="28dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="邀请"
                    android:drawableLeft="@drawable/ic_green_add_icon"
                    android:drawablePadding="10dp"
                    android:textColor="@color/app_theme_color"
                    android:textSize="15sp" />


               <!-- <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
