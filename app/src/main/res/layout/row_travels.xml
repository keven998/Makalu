<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_bg_city_album_panel">

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_note_title"
            android:layout_below="@id/tv_note_title"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/color_text_iii"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_travels_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:ellipsize="end"
            android:gravity="left|top"
            android:lineSpacingExtra="2dp"
            android:lines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_text_ii"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_travels"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_travels_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/city_icon_mt_userpic"
        android:scaleType="center"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_send"
        android:layout_width="fill_parent"
        android:layout_height="85dp">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="44dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selecter_theme_btn_radius_4"
            android:text="发送"
            android:textColor="@color/base_color_white"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>

</FrameLayout>