<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/selector_frame_white_card"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/rl_more"
        android:layout_width="fill_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="精选游记"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_standard_tnote"
            android:textColor="@color/base_text_color_title"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="更多游记"
            android:textColor="@color/base_text_color_title"
            android:textSize="12sp"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/base_divider_color"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_travels"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_travels_name"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/base_text_color_title"
            android:layout_height="wrap_content"
          />

        <TextView
            android:id="@+id/tv_travels_desc"
            android:layout_below="@id/tv_travels_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:maxLines="2"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cell_accessory"/>
        
        <Button
            android:id="@+id/btn_send"
            android:layout_width="44dp"
            android:layout_height="25dp"
            android:textSize="13sp"
            android:visibility="gone"
            android:background="@drawable/ic_theme_btn_bg"
            android:layout_gravity="center_vertical"
            android:textColor="@color/base_color_white"
            android:text="发送"/>

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layerType="software"
        android:background="@drawable/dash"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_toRightOf="@id/iv_avatar"
            android:id="@+id/tv_username"
            android:layout_width="fill_parent"
            android:textSize="11sp"
            android:textColor="@color/base_text_color_title"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tv_from"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_below="@id/tv_username"
            android:layout_width="80dp"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="@color/base_text_color_subtitle"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/tv_from"
            android:textSize="10sp"
            android:textColor="@color/base_text_color_subtitle"
            android:layout_below="@id/tv_username"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>

</FrameLayout>