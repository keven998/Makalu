<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="11dp">

        <ImageView
            android:id="@+id/iv_travels"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_travels_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/iv_travels"
            android:singleLine="true"
            android:textColor="@color/base_font_color"
            android:textSize="15sp"
            android:ellipsize="end"
            android:text="fdjsaklfjdkljfdfsadfsafdsaffdfdsaddsa"/>

        <!--<TextView
            android:id="@+id/trip_fee"
            android:layout_width="wrap_content"
