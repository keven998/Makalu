<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/base_text_color_subtitle"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editor_with_border"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_sms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_phone_24dp"
                android:drawablePadding="6dp"
                android:textSize="15sp"
                android:textColor="@color/base_text_color_title"
                android:hint="手机号"
                android:inputType="phone"/>

            <Button
                android:id="@+id/btn_time_down"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="12sp"
                android:textColor="@color/base_text_color_text_hint"
                android:text="60s"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="@color/base_color_white"
            android:background="@drawable/tl_btn_highlight_selector"/>

    </LinearLayout>


</LinearLayout>