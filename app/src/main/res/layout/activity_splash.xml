<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/bar_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible">

        <Button
            android:id="@+id/sp_reg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/selector_ic_splash_login"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="注册"
            android:textColor="@color/base_color_white"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/sp_log"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/sp_reg"
            android:background="@drawable/selector_ic_splash_login"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="登录"
            android:textColor="@color/base_color_white"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sp_bounce"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/base_color_white"
            android:layout_below="@+id/sp_log"
            android:textSize="12sp"
            android:text="跳过"
            android:visibility="visible" />

    </RelativeLayout>


</FrameLayout>