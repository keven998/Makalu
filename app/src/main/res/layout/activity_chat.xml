<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud" >
    <LinearLayout
        android:id="@+id/bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip" >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/base_divider_color"
            />

        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_mode_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">
            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/btn_chat_tao"
                android:scaleType="fitCenter"
                android:onClick="more" />

            <ImageView
                android:id="@+id/iv_emoticons_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/chatting_biaoqing_btn_normal"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_emoticons_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/chatting_biaoqing_btn_enable"
                android:visibility="gone" />




            <RelativeLayout
                android:id="@+id/edittext_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editor_with_border"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:id="@+id/btn_press_to_speak"
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/chat_press_speak_btn"
                    android:gravity="center"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/button_pushtotalk"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="16sp" />
                </LinearLayout>


                <com.aizou.peachtravel.common.widget.PasteEditText
                    android:id="@+id/et_sendmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@null"
                    android:maxLines="3"
                    android:minHeight="32dp"
                    android:onClick="editClick"
                    android:layout_centerVertical="true"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/btn_set_mode_voice"
                    android:layout_width="29dp"
                    android:layout_height="24dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:src="@drawable/btn_chat_mode_voice"
                    android:scaleType="fitCenter"
                    android:onClick="setModeVoice"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_set_mode_keyboard"
                    android:layout_width="29dp"
                    android:layout_height="24dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:src="@drawable/chatting_setmode_keyboard_btn"
                    android:scaleType="fitCenter"
                    android:onClick="setModeKeyboard"
                    android:visibility="gone" />


            </RelativeLayout>


            <Button
                android:id="@+id/btn_send"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@drawable/chat_send_btn_selector"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:onClick="onClick"
                android:text="@string/button_send"
                android:textColor="@color/base_text_color_subtitle"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_backgroud"
            android:orientation="vertical"
            android:visibility="gone" >

            <!-- 表情图片 -->

            <LinearLayout
                android:id="@+id/ll_face_container"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 图片，表情，名片等按钮 -->

            <LinearLayout
                android:id="@+id/ll_btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:visibility="gone" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <TextView android:id="@+id/btn_my_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="旅行计划"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:textColor="@color/base_text_color_subtitle"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/btn_chat_my_guide"
                        android:drawablePadding="3dp"
                        />

                    <TextView android:id="@+id/btn_fav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="收藏夹"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:textColor="@color/base_text_color_subtitle"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/btn_chat_fav"
                        android:drawablePadding="3dp"
                        />

                    <TextView android:id="@+id/btn_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="地点"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:textColor="@color/base_text_color_subtitle"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/btn_chat_loc"
                        android:drawablePadding="3dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <TextView android:id="@+id/btn_travels"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="游记"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:textColor="@color/base_text_color_subtitle"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/btn_chat_travels"
                        android:drawablePadding="3dp"
                       />

                    <TextView android:id="@+id/btn_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="相册"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:textColor="@color/base_text_color_subtitle"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/btn_chat_photos"
                        android:drawablePadding="3dp"
                        />

                    <TextView android:id="@+id/btn_take_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="拍照"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:textColor="@color/base_text_color_subtitle"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/btn_chat_takephoto"
                        android:drawablePadding="3dp"
                       />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bar_bottom"
        android:layout_below="@+id/title_bar" >

        <ProgressBar
            android:id="@+id/pb_load_more"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pb_load_more"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:listSelector="#00000000"
            android:scrollbarStyle="outsideOverlay"
            android:transcriptMode="normal" />

        <RelativeLayout
            android:id="@+id/recording_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/recording_hint_bg"
            android:padding="10dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/mic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/record_animate_01" />

            <TextView
                android:id="@+id/recording_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mic_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:text="@string/move_up_to_cancel"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_group_members"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:background="#eeffffff"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_below="@+id/title_bar"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <GridView
            android:id="@+id/gv_members"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:horizontalSpacing="8dp"
            android:numColumns="auto_fit"
            android:columnWidth="40dp"
            android:listSelector="@android:color/transparent"
            android:verticalSpacing="10dp"
            />
            <ImageView
                android:id="@+id/iv_add_member"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/smiley_add_btn"/>
            <ImageView
                android:id="@+id/iv_del_member"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/smiley_minus_btn"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_group_unexpand"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:visibility="gone"

            />

        </RelativeLayout>
    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>



</RelativeLayout>