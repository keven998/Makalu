<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/main_color" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mm_listitem_simple"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地:"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/base_text_color_title"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/loc_list_rv"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@color/base_color_white"
            android:visibility="visible"
            android:scrollbars="none" />
        
        </LinearLayout>

    

    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/strategy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_backgroud"
        android:layout_weight="1" />

    <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
        android:background="@drawable/shape_rectangle_white_with_border"
        android:id="@+id/strategy_indicator"
        android:layout_width="match_parent"
        android:paddingLeft="52dp"
        android:paddingRight="52dp"
        android:layout_height="62dp" />

</LinearLayout>