<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/strategy_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/main_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
                    android:id="@+id/strategy_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/title_bar_height" />

                <RelativeLayout
                    android:id="@+id/bottom_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:background="@color/base_color_white_trans">

                    <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
                        android:id="@+id/strategy_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:divider="@color/base_border_color"
                        android:showDividers="middle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/color_line" />

                </RelativeLayout>

                <View
                    android:id="@+id/loading_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/base_color_white_trans"
                    android:visibility="gone" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@drawable/bg_navigation_bar">

                <TextView
                    android:id="@+id/tv_title_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/selector_ic_nav_back"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp" />

                <TextView
                    android:id="@+id/strategy_title"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/base_color_black"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/iv_more"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/ic_trip_mapview_ios" />


                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="11dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/selector_ic_common_navigation_menu" />

                    <TextView
                        android:id="@+id/tv_copy_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/copy_btn_bg"
                        android:duplicateParentState="true"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="复制计划"
                        android:textColor="@color/app_theme_color"
                        android:textSize="15sp"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/strategy_menu_frame"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/base_color_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/plan_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/jh_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/base_font_color"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/base_border_color" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_edit_plan"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/option_cell_selector"
                android:drawableLeft="@drawable/strategy_share"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="35dp"
                android:text="修改行程"
                android:textColor="@color/color_text_i"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="20dp"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/strategy_share"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/option_cell_selector"
                android:drawableLeft="@drawable/strategy_transfer"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="35dp"
                android:text="发给朋友"
                android:textColor="@color/color_text_i"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/base_border_color" />

            <RelativeLayout
                android:id="@+id/selected_place_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="目的地"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/base_border_color" />

            </RelativeLayout>

            <ListView
                android:id="@+id/strategy_user_been_place_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:divider="@color/color_line"
                android:dividerHeight="0.8dp" />

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>