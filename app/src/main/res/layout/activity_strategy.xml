<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/strategy_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



<RelativeLayout
    android:id="@+id/main_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/strategy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height" />

    <RelativeLayout
        android:id="@+id/bottom_indicator"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:background="@color/base_color_white_trans"
        >

       <!-- <View
            android:layout_width="180dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="22dp"
            android:background="#df4859" />-->

        <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
            android:id="@+id/strategy_indicator"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="@color/base_border_color"
            android:showDividers="middle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_alignParentTop="true"
            />


    </RelativeLayout>


        <View
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_color_white_trans"
            android:visibility="gone"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background">

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_title_back"
            android:paddingLeft="20dp"
            android:paddingRight="30dp" />

       <TextView
            android:id="@+id/strategy_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/base_color_black"
            android:singleLine="true"
            android:ellipsize="end"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

        <CheckedTextView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_location"
            android:checked="false"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/checker_ic_plan_edit"
            />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_more"
            android:src="@drawable/ic_location"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            />


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="11dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_navigationbar"
            />

        <TextView
            android:id="@+id/tv_copy_guide"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_guide_complete_selector"
            android:duplicateParentState="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="复制"
            android:layout_centerVertical="true"
            android:textColor="@color/base_color_white"
            android:textSize="15sp"
            android:visibility="gone"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_title_color"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>




        <LinearLayout
            android:id="@+id/strategy_menu_frame"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:background="@color/base_color_white"
            android:orientation="vertical"
            android:layout_gravity="end">

            <RelativeLayout
                android:id="@+id/plan_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/jh_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/base_font_color"
                    android:textSize="14sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/base_border_color"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/strategy_share"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textColor="@color/base_font_color"
                android:textSize="15sp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/strategy_share"
                android:background="@drawable/option_cell_selector"
                android:paddingLeft="35dp"
                android:text="发给好友"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/base_border_color"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/strategy_transfer"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textColor="@color/base_font_color"
                android:textSize="15sp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/strategy_transfer"
                android:background="@drawable/option_cell_selector"
                android:paddingLeft="35dp"
                android:text="转发到其他平台"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/base_border_color"
                />

            <RelativeLayout
                android:id="@+id/selected_place_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:text="已选目的地"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/base_border_color"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <ListView
                android:id="@+id/strategy_user_been_place_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:dividerHeight="0.8dp"
                />


       </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>