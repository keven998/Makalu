<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="13dp" >

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity" >

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_placeholder_round" />
        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userhead"
            />


        <RelativeLayout
            android:id="@+id/rl_chatcontent"
            android:layout_width="185.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userid"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/chatfrom_taozi_bg">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="景点"
                android:layout_marginLeft="8dp"
                android:textColor="@color/base_color_white"/>
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/tv_type"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/iv_image"
                android:layout_marginTop="6dp"
                android:layout_below="@id/tv_type"
                android:singleLine="true"
                android:textSize="12sp"
                android:text="景点名称"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/base_text_color_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_attr"
                android:layout_toRightOf="@id/iv_image"
                android:layout_below="@id/tv_name"
                android:textSize="11sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="3小时"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/base_text_color_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_desc"
                android:textSize="11sp"
                android:layout_below="@id/iv_image"
                android:textColor="@color/base_text_color_subtitle"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:text="景点描述"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>