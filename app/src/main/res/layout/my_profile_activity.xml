<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_navigation_bar">

        <TextView
            android:id="@+id/my_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="旅行派"
            android:textColor="@color/color_text_titlebar"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_profile_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="未登录"
            android:textColor="@color/color_text_titlebar"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/my_profile_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="32dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:text="编辑"
            android:textColor="@color/selector_white_text_color"
            android:textSize="16sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/unread_msg_notify"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_unread_msg"
            android:gravity="center"
            android:minWidth="20dp"
            android:textColor="@color/base_color_white"
            android:textSize="12sp"
            android:visibility="gone"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_color_white">

                <ImageView
                    android:id="@+id/iv_more_header_frame_gender1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/page_more_header_frame_height"
                    android:scaleType="centerCrop"
                    />

                <FrameLayout
                    android:id="@+id/fl_gender_bg"
                    android:layout_marginTop="10dp"
                    android:layout_width="@dimen/page_more_avatar_frame_size"
                    android:layout_height="@dimen/page_more_avatar_frame_size"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/page_more_avatar_frame_size_padding"
                    >
                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <RelativeLayout android:id="@+id/rl_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/fl_gender_bg">

                    <RelativeLayout android:id="@+id/rly_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:paddingBottom="3dp"
                            android:textColor="@color/base_color_white"
                            android:gravity="center"
                            android:layout_marginLeft="24dp"
                            android:singleLine="true"/>
                    </RelativeLayout>

                    <ImageView android:id="@+id/iv_constellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rly_level"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="-32dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/rl_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shallow"
                android:orientation="horizontal">

                <RelativeLayout android:id="@+id/fl_plans_entry"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView android:id="@+id/tv_plans_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:layout_centerInParent="true"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="23dp"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:textColor="@color/color_text_i"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:text="计划"
                        android:textColor="@color/color_text_iii"/>

                </RelativeLayout>

                <RelativeLayout android:id="@+id/rl_picture_entry"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView android:id="@+id/tv_pictures_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:layout_centerInParent="true"
                        android:paddingBottom="23dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:textColor="@color/color_text_i"
                        android:text="张"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:text="相册"
                        android:textColor="@color/color_text_iii"/>

                    <View android:layout_width="1px"
                        android:layout_height="32dp"
                        android:background="@color/color_line"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>

                <RelativeLayout android:id="@+id/fl_tracks_entry"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/tv_tracks_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:layout_centerInParent="true"
                        android:paddingBottom="23dp"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/color_text_i"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:text="足迹"
                        android:textColor="@color/color_text_iii"/>

                    <View android:layout_width="1px"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:background="@color/color_line"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                >

                <TableRow
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ta的相册"
                        android:textSize="14sp"
                        android:layout_column="0"
                        android:layout_gravity="top|right"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_column="1"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            >
                        <FrameLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">
                            <ImageView
                                android:id="@+id/profile_image1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_person_normal"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="10dp"
                            >
                            <ImageView
                                android:id="@+id/profile_image2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_person_normal"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="10dp"
                            >
                            <ImageView
                                android:id="@+id/profile_image3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_person_normal"
                                />
                        </FrameLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_arrow_right"
                            />
                    </LinearLayout>

                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line"/>
                <TableRow
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅行经历"
                        android:textSize="14sp"
                        android:layout_column="0"
                        android:layout_gravity="top|right"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="1"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_weight="1"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:text="目前为止,她已旅行"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="4国15城"
                                android:layout_gravity="center_vertical"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_arrow_right"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_line"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:text="目前为止,Ta共制作旅行计划"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="29份"
                                android:layout_gravity="center_vertical"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_arrow_right"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_line"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:text="目前为止,Ta共完成游记"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="29篇"
                                android:layout_gravity="center_vertical"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_arrow_right"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line"/>

                <TableRow
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于Ta"
                        android:textSize="14sp"
                        android:layout_column="0"
                        android:layout_gravity="top|right"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:text="他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_column="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            />


                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line"/>

                <TableRow
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="派派点评"
                        android:textSize="14sp"
                        android:layout_column="0"
                        android:layout_gravity="top|right"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴他最珍惜的是他最信赖的伙伴"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_column="1"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        />


                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"

                    />
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>