<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/title_bar_height"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_spot"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/spot_detail_picture_height"
            android:background="@color/base_gary_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_poi_share_selector"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_spot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_poi_title"
            android:text="dfsafsa"
            android:textColor="@color/base_font_color"
            android:textSize="18sp" />


        <RatingBar
            android:id="@+id/ratingBar_spot"
            style="@style/custom_small_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_pic_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_images_go"
            android:visibility="gone" />

        <TextView
            android:id="@+id/poi_rank_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="7dp"
            android:text="景点排名"
            android:textColor="@color/light_gray_text_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_line_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="实用信息"
            android:textColor="@color/base_font_color"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_ticket"
                android:drawablePadding="11dp"
                android:gravity="center_vertical"
                android:paddingLeft="1dp"
                android:text="门票"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_suggest"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="建议游玩"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_spot_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="开放时间"
                android:textColor="@color/cell_sm_text_color"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fl_book"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_phone"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="电话"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_map"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="地址"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_desc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/option_cell_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/spot_det_introduction"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="景点介绍"
                android:textColor="@color/second_font_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/base_color_line_color" />


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="12dp"
            android:text="景点攻略"
            android:textColor="@color/base_font_color"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travel_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/poi_det_img_checker_01"
                android:enabled="false"
                android:gravity="center"
                android:padding="15dp"
                android:text="景点攻略"
                android:textColor="@color/base_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/poi_det_img_checker_02"
                android:enabled="false"
                android:gravity="center"
                android:padding="15dp"
                android:text="提示"
                android:textColor="@color/base_font_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_traffic_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/poi_det_img_checker"
                android:enabled="false"
                android:gravity="center"
                android:padding="15dp"
                android:text="交通"
                android:textColor="@color/base_font_color"
                android:textSize="15sp" />
        </LinearLayout>


        <!--</FrameLayout>-->


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/base_color_line_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="网友点评"
                android:textColor="@color/base_font_color"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/all_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="全部点评"
                android:textColor="@color/third_font_color"
                android:textSize="13sp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>

