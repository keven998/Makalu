<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gray_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="32dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_poi_close" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_close"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/fg_mock_up">

                    <ImageView
                        android:id="@+id/iv_spot"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/spot_detail_picture_height"
                        android:background="@color/base_gary_bg"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_spot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/bg_poi_title"
                        android:textColor="@color/base_color_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar_spot"
                        style="@style/custom_small_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp" />

                    <TextView
                        android:id="@+id/tv_pic_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_images_go" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:paddingTop="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_poi_fav_normal" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:paddingTop="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_poi_share" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:background="#E5E5E5"
                    android:gravity="center"
                    android:text="景点简介"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="18dp"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:background="#E5E5E5"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_spot_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lineSpacingExtra="3dp"
                    android:padding="18dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:background="#E5E5E5"
                    android:gravity="center"
                    android:text="门票"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_price_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="18dp"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="13sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
               >

                <TextView
                    android:id="@+id/tv_book"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selecter_theme_btn_radius_15"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="在线预订"
                    android:textColor="@color/base_color_white"
                    android:textSize="14sp" />
            </FrameLayout>


            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/attr_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_poi_address" />

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/attr_address"
                    android:background="@drawable/frame_cell_bounding_gray"
                    android:layout_marginLeft="10dp"
                    android:lineSpacingExtra="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="13sp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/base_color_white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_travel_guide"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_spot_detail"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="景点\n体验"
                        android:textColor="@color/theme_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_tips"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/btn_spot_detail"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="小\n贴士"
                        android:textColor="@color/theme_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_traffic_guide"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/btn_spot_detail"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="交通"
                        android:textColor="@color/theme_color"
                        android:textSize="13sp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>