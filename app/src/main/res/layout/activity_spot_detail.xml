<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spot_detail_picture_height"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_poi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spot_detail_picture_height"
            android:background="@color/base_gary_bg"
            android:scaleType="centerCrop" />

        <com.aizou.core.widget.DotView xmlns:cube_dotview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dot_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            cube_dotview:dot_radius="3dp"
            cube_dotview:dot_selected_color="0xff99cc66"
            cube_dotview:dot_span="18dp"
            cube_dotview:dot_unselected_color="0xffe2e2e2" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_poi_style"
            android:layout_width="103dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/type_btn"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/rb_poi"
            style="@style/custom_small_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_poi_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="3"
        android:padding="10dp"
        android:textColor="@color/color_text_i"
        android:background="@drawable/option_cell_selector"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/option_cell_selector"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/poi_icon_address"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="地址"
            android:textColor="@color/color_text_iii"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/option_cell_selector"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/poi_icon_phone"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="电话"
            android:textColor="@color/color_text_iii"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ticket"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/option_cell_selector"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="5dp">

        <CheckedTextView
            android:id="@+id/ctv_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:checked="false"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/checker_book_ticket"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="费用"
            android:textColor="@color/color_text_iii"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_run_time"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/option_cell_selector"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_run_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_arrow_right"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_text_i"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="开放"
            android:textColor="@color/color_text_iii"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_poi_travel_info" />

        <ImageView
            android:id="@+id/tv_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="intentToTravel"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_poi_travel_tips" />

        <ImageView
            android:id="@+id/tv_traffic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="intentToFood"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_poi_travel_traffic" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="14dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />


</LinearLayout>

