<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_dotview="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_white_bar"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:foreground="@drawable/foreground_round1">

                    <ImageView
                        android:id="@+id/iv_spot"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_common_default"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_pic_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_black_panel" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_spot_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/app_theme_color"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/ratingBar_poi"
                        style="@style/custom_small_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                         />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_fav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_unfav" />

                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_share" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="简介"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />


            <com.aizou.core.widget.expandabletextview.ExpandableTextView
                android:id="@+id/expand_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                expandableTextView:animDuration="200"
                expandableTextView:maxCollapsedLines="2">


                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@null"
                    android:paddingBottom="10dp"
                    android:paddingLeft="100dp"
                    android:scaleType="center" />
            </com.aizou.core.widget.expandabletextview.ExpandableTextView>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_divider_color"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="门票"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/base_color_white"
                    android:background="@drawable/btn_theme_normal_shape"
                    android:text="在线预订"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_divider_color"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="地址"
                android:textColor="@color/app_theme_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_location"
                android:padding="10dp"
                android:textColor="@color/base_text_color_subtitle"
                android:textSize="12sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_divider_color"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="游玩"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开放时间"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_open_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游玩时间"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_time_cost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最佳月份"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />


                <com.aizou.core.widget.expandabletextview.ExpandableTextView
                    android:id="@+id/tv_best_month"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    expandableTextView:animDuration="200"
                    expandableTextView:maxCollapsedLines="2">


                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="100dp"
                        android:scaleType="center" />
                </com.aizou.core.widget.expandabletextview.ExpandableTextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:background="@color/base_divider_color"/>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="温馨贴士"
                android:visibility="gone"
                android:padding="10dp"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:background="@color/base_divider_color"/>

            <TextView
                android:id="@+id/tv_travel_guide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="游玩指南"
                android:padding="10dp"
                android:visibility="gone"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:visibility="gone"
                android:background="@color/base_divider_color"/>

            <TextView
                android:id="@+id/tv_traffic_guide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="交通指南"
                android:padding="10dp"
                android:visibility="gone"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dp"
                android:visibility="gone"
                android:background="@color/base_divider_color"/>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>