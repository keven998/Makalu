<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gray_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_poi_close" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_close"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/ic_text_cover_bg">

                    <ImageView
                        android:id="@+id/iv_spot"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:background="@color/base_gary_bg"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_spot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/bg_poi_title"
                        android:textColor="@color/base_color_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar_spot"
                        style="@style/custom_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tv_pic_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_images_go" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_poi_fav_normal" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_poi_share" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_card"
                android:layout_width="fill_parent"
                android:layout_height="145dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_spot_card"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spot_dash" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_cost_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_open_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:scrollHorizontally="true"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_price_desc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:scrollHorizontally="true"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_book"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_reserve_shape"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="在线预订"
                        android:textColor="@color/base_color_white"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/spot_dash" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/attr_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_attr_dots"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_poi_address" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="0.75dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/attr_address"
                    android:background="@color/base_text_color_text_placeholder" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="0.75dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/attr_address"
                    android:background="@color/base_text_color_text_placeholder" />

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr_address"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:lineSpacingExtra="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_color_white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_spot_detail"
                        android:gravity="center"
                        android:text="简介"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_travel_guide"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_spot_detail"
                        android:gravity="center"
                        android:text="亮点\n体验"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_tips"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_spot_detail"
                        android:gravity="center"
                        android:text="实用\n信息"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_traffic_guide"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_spot_detail"
                        android:gravity="center"
                        android:text="交通\n指南"
                        android:textColor="@color/base_text_color_subtitle"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>