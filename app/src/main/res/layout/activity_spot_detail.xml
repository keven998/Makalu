<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_bar"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_below="@id/iv_close"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/foreground_round1">

                    <ImageView
                        android:id="@+id/iv_spot"
                        android:layout_width="fill_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/bg_common_default"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_spot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/app_theme_color"
                        android:textSize="18sp" />

                    <RatingBar
                        android:id="@+id/ratingBar_poi"
                        style="@style/custom_small_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tv_pic_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_black_panel" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_unfav" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_share" />


                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:background="@color/base_gary_bg"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_open_and_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_price_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/app_theme_color"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:text="在线预订"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/base_color_white"
                    android:textSize="14sp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:background="@color/base_gary_bg"
                    android:layout_height="0.75dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location"
                    android:scaleType="centerInside"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/base_gary_bg"
                    android:layout_marginRight="40dp"
                    android:layout_height="0.75dp"/>
                </LinearLayout>

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center"
                android:textColor="@color/base_text_color_subtitle"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="简介"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_travel_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="亮点\n体验"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="15sp"
                    android:visibility="visible" />

                 <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="游玩\n贴士"
                     android:layout_marginLeft="15dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_traffic_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="交通"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="15sp"
                    android:visibility="visible" />
                </LinearLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>