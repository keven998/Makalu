<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/base_color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/icon_voupon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="优惠券"
                android:textColor="@color/base_color_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="100"
                android:textColor="@color/base_color_white"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_voupon"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:text="新用户优惠券"
                    android:textColor="@color/color_text_i"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:text="全场通用"
                    android:textColor="@color/color_text_iii"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_coupon_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:text="满400元可用"
                    android:textColor="#ff0066"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_coupon_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:text="2016年2月18日11:20:51"
                    android:textColor="@color/color_text_iii"
                    android:textSize="12sp" />
            </LinearLayout>

            <CheckedTextView
                android:id="@+id/ctv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:background="@color/base_color_white"
                android:drawableLeft="@drawable/checker_for_checkbox_pink"
                android:textColorLink="@color/app_theme_color"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>