<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_frame_bg"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical">
                    <ImageView android:id="@+id/iv_avatar"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/avatar_line"
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:src="@drawable/avatar_placeholder"/>

                    <ImageView android:id="@+id/iv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_avatar"
                        android:layout_alignBottom="@id/iv_avatar"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/base_color_white"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="未登录"/>

                    <TextView android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nickname"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:textColor="@color/base_color_white"
                        android:visibility="gone"/>

                    <TextView android:id="@+id/tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_id"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:maxLines="2"
                        android:textColor="@color/base_color_white"
                        android:visibility="gone"/>

                    <Button android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_nickname"
                        android:background="@drawable/btn_login_button"
                        android:layout_alignLeft="@id/tv_nickname"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text="登录"
                        android:textColor="@color/them_botton_text_color"
                        android:textSize="14sp"/>

                    <Button android:id="@+id/btn_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/btn_login"
                        android:layout_alignTop="@id/btn_login"
                        android:background="@drawable/btn_login_button"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text="注册"
                        android:textColor="@color/them_botton_text_color"
                        android:textSize="14sp"/>

                </RelativeLayout>

                <ImageView android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cell_accessory_white"
                    android:layout_marginRight="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView android:id="@+id/ll_share_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_cell_selector"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:drawableLeft="@drawable/ic_setting_share"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/cell_accessory"
                    android:gravity="center_vertical"
                    android:text="分享绑定"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ll_message_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:layout_marginTop="1dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:drawableLeft="@drawable/ic_app_message"
                    android:gravity="center_vertical"
                    android:background="@drawable/option_cell_selector"
                    android:drawableRight="@drawable/cell_accessory"
                    android:text="我的收藏"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ll_push_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:drawableLeft="@drawable/ic_share_to_friend"
                    android:background="@drawable/option_cell_selector"
                    android:drawableRight="@drawable/cell_accessory"
                    android:text="推荐给微信好友"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:drawableLeft="@drawable/ic_setting"
                    android:background="@drawable/option_cell_selector"
                    android:drawableRight="@drawable/cell_accessory"
                    android:text="设置"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ll_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:drawableLeft="@drawable/ic_about"
                    android:background="@drawable/option_cell_selector"
                    android:drawableRight="@drawable/cell_accessory"
                    android:text="关于桃子旅行"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>