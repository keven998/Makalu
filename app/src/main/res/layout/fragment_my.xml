<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

                    <LinearLayout
                        android:id="@+id/user_info_pannel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="67dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/profile_background"
                        >


                        <com.xuejian.client.lxp.common.widget.RoundImageBoarderView
                            android:id="@+id/user_avatar"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            imagecontrol:border_outside_color="#FFFFFFFE"
                            imagecontrol:border_thickness="2dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            >
                            <TextView
                                android:id="@+id/nameAndId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:text="姓名"
                                />

                            <TextView
                                android:id="@+id/other_infos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:text="星座"
                                />
                        </LinearLayout>
                    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <LinearLayout
                android:id="@+id/plane_panel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/travel_plane"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_size_15"
                    android:text="旅行计划"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/plane_selector"
                    android:textColor="@color/textcolor_selector_2"
                    />
                <View
                    android:id="@+id/travel_pline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_text_ii"
                    />
            </LinearLayout>



            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />

            <LinearLayout
                android:id="@+id/contact_panel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/contact_people"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textSize="@dimen/text_size_15"
                    android:text="联系人"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"

                    android:drawableLeft="@drawable/plane_selector"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/textcolor_selector_2"
                    />
                <View
                    android:id="@+id/contact_pline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_text_ii"
                    />
            </LinearLayout>
            </LinearLayout>
            <!--android:drawableLeft="@drawable/note_selected"-->
            <!--<com.xuejian.client.lxp.common.widget.ListViewForScrollView
                android:id="@+id/my_fragment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            </com.xuejian.client.lxp.common.widget.ListViewForScrollView>-->
            <ListView
                android:id="@+id/my_fragment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:minHeight="800dp"
                >
            </ListView>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent_color"
        android:layout_gravity="top"
        >
        <RelativeLayout
            android:id="@+id/my_panpan_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            >

            <ImageView
                android:id="@+id/setting_head_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="30dp"
                android:scaleType="center"
                android:src="@drawable/selector_ic_nav_back"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="72dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="我的.旅行派"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingRight="14dp"
                android:singleLine="true"
                android:text="设置"
                android:textColor="@color/selector_white_text_color"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/add_plane_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_my_plane"
        android:layout_marginBottom="70dp"
        android:layout_gravity="bottom|center_horizontal"
        />
</FrameLayout>