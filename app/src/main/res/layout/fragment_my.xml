<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backgroud">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/login_frame_bg">

            <TextView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="18sp"
                android:text="我"
                android:textColor="@color/base_color_white"/>

            <LinearLayout android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical">
                    <ImageView android:id="@+id/iv_avatar"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/avatar_line"
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:src="@drawable/avatar_placeholder_round"/>

                    <ImageView android:id="@+id/iv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_avatar"
                        android:layout_alignBottom="@id/iv_avatar"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/base_line"
                        android:orientation="horizontal">

                        <TextView android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/base_color_white"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="未登录"
                            />

                       <!-- <TextView
                            android:id="@+id/user_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/route_desc_num_color"
                            android:textColor="@color/base_color_white"
                            android:textSize="12sp"
                            android:text="V2"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/user_xingzuo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/base_color_white"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"
                            android:text="狮子座"
                            android:visibility="gone"
                            />-->

                    </LinearLayout>


                    <TextView android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/base_line"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:textColor="@color/base_color_white"

                        />

                    <TextView android:id="@+id/tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_id"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:maxLines="2"
                        android:textColor="@color/base_color_white"
                        />

                    <!--<Button android:id="@+id/btn_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_login_button"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:layout_marginRight="10dp"
                        android:text="注册"
                        android:textColor="@color/them_botton_text_color"
                        android:textSize="14sp"/>

                    <Button android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_login_button"
                        android:layout_toRightOf="@id/btn_reg"
                        android:layout_alignTop="@id/btn_reg"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text="登录"
                        android:textColor="@color/them_botton_text_color"
                        android:textSize="14sp"/>-->

                </RelativeLayout>

                <ImageView android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cell_accessory_white"
                    android:layout_marginRight="18dp"/>

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView android:id="@+id/ll_share_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_cell_selector"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/ic_setting_share"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/cell_accessory"
                    android:gravity="center_vertical"
                    android:text="分享绑定"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/ll_message_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:layout_marginTop="1dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/ic_my_favorite"
                    android:gravity="center_vertical"
                    android:background="@drawable/option_cell_selector"
                    android:drawableRight="@drawable/right_arrow_icon"
                    android:text="我的收藏"
                    android:textColor="@color/base_font_color"
                    android:textSize="15sp"
                    android:visibility="visible"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/ll_push_friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="17dp"
                        android:paddingRight="18dp"
                        android:drawablePadding="13dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="-2dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawableLeft="@drawable/ic_share_to_friend"
                        android:background="@drawable/option_cell_selector"
                        android:drawableRight="@drawable/right_arrow_icon"
                        android:text="推荐给微信好友"
                        android:textColor="@color/base_font_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="48dp"
                        android:background="@color/app_backgroud"
                        />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/ic_setting"
                    android:background="@drawable/option_cell_selector"
                    android:drawableRight="@drawable/right_arrow_icon"
                    android:text="设置"
                    android:textColor="@color/base_font_color"
                    android:textSize="15sp" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ll_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="17dp"
                        android:paddingRight="18dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawableLeft="@drawable/ic_about"
                        android:background="@drawable/option_cell_selector"
                        android:drawableRight="@drawable/right_arrow_icon"
                        android:text="关于旅FM"
                        android:textColor="@color/base_font_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="48dp"
                        android:background="@color/app_backgroud"
                        />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>