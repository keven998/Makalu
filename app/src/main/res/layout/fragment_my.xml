<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_top_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_frame_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="我"
                    android:textColor="@color/base_color_white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/rl_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitCenter"
                            android:src="@drawable/avatar_placeholder_round" />

                        <ImageView
                            android:id="@+id/iv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/iv_avatar"
                            android:layout_alignLeft="@id/iv_avatar"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="4dp"
                            android:scaleType="fitCenter"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/base_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="未登录"
                                android:textColor="@color/base_color_white"
                                android:textSize="15sp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/base_line"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/base_color_white"
                            android:textSize="12sp"

                            />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_id"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/base_color_white"
                            android:textSize="12sp" />

                        <!--<Button android:id="@+id/btn_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_login_button"
                            android:layout_marginLeft="8dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:layout_marginRight="10dp"
                            android:text="注册"
                            android:textColor="@color/them_botton_text_color"
                            android:textSize="14sp"/>

                        <Button android:id="@+id/btn_login"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_login_button"
                            android:layout_toRightOf="@id/btn_reg"
                            android:layout_alignTop="@id/btn_reg"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:text="登录"
                            android:textColor="@color/them_botton_text_color"
                            android:textSize="14sp"/>-->

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/cell_accessory_white" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_share_account"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/option_cell_selector"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/arr_poi_guide"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:text="分享绑定"
                    android:textColor="@color/base_text_color_title"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ll_message_center"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/option_cell_selector"
                    android:drawableLeft="@drawable/ic_my_favorite"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right_arrow_icon"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:text="我的收藏"
                    android:textColor="@color/base_font_color"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ll_push_friends"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:layout_marginLeft="-2dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/option_cell_selector"
                        android:drawableLeft="@drawable/ic_share_to_friend"
                        android:drawablePadding="13dp"
                        android:drawableRight="@drawable/right_arrow_icon"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="18dp"
                        android:paddingTop="10dp"
                        android:text="推荐应用给好友"
                        android:textColor="@color/base_font_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="48dp"
                        android:background="@color/app_backgroud" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/option_cell_selector"
                    android:drawableLeft="@drawable/ic_setting"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right_arrow_icon"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:text="设置"
                    android:textColor="@color/base_font_color"
                    android:textSize="15sp" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ll_about"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/option_cell_selector"
                        android:drawableLeft="@drawable/ic_about"
                        android:drawablePadding="15dp"
                        android:drawableRight="@drawable/right_arrow_icon"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="18dp"
                        android:paddingTop="10dp"
                        android:text="关于旅行派"
                        android:textColor="@color/base_font_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="48dp"
                        android:background="@color/app_backgroud" />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_navigation_bar">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_text_titlebar"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_text_titlebar"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="编辑"
            android:textColor="@color/base_color_white"
            android:textSize="17sp" />

    </RelativeLayout>
</FrameLayout>