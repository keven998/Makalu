<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />


    <TextView
        android:id="@+id/ll_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_cell_selector"
        android:drawableLeft="@drawable/ic_setting_cache_clean"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="清除缓存"
        android:textColor="@color/color_text_ii"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/ll_xt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_cell_selector"
        android:drawableLeft="@drawable/ic_setting_msg_notify"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/icon_arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="提醒设置"
        android:textColor="@color/color_text_ii"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/ll_version_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_cell_selector"
        android:drawableLeft="@drawable/ic_setting_version_upgrade"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="版本更新"
        android:textColor="@color/color_text_ii"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_line" />

</LinearLayout>