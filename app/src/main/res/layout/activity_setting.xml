<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/tab_bar_color">

        <ImageView
            android:id="@+id/setting_head_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="30dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_left_white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="设置"
            android:textColor="@color/base_color_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/recommend_app"
            android:background="@drawable/option_cell_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="推荐应用给朋友"
                android:textColor="@color/color_text_ii"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow
            android:id="@+id/geek_apply"
            android:background="@drawable/option_cell_selector">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="申请成为商家"
                android:textColor="@color/color_text_ii"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </TableRow>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow
            android:id="@+id/ll_version_update"
            android:background="@drawable/option_cell_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="版本更新"
                android:textColor="@color/color_text_ii"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow
            android:id="@+id/ll_tv_feedback"
            android:background="@drawable/option_cell_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="意见反馈"
                android:textColor="@color/color_text_ii"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow
            android:id="@+id/ll_about_us"
            android:background="@drawable/option_cell_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="关于我们"
                android:textColor="@color/color_text_ii"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow
            android:id="@+id/ll_clear_cache"
            android:layout_marginTop="20dp"
            android:background="@drawable/option_cell_selector">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1">

                <TextView
                    android:id="@+id/tv_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="清除缓存"
                    android:textColor="@color/color_text_ii"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="200dp"
                    android:layout_toRightOf="@+id/tv_clean"
                    android:textColor="@color/color_text_iii"
                    android:textSize="14sp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow android:background="@drawable/option_cell_selector">

            <CheckedTextView
                android:id="@+id/ll_xt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_span="2"
                android:background="@color/white"
                android:drawableRight="@drawable/checker_for_checkbox"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="聊天提醒"
                android:textColor="@color/color_text_ii"
                android:textSize="15sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <TableRow android:background="@drawable/option_cell_selector">
            <LinearLayout
                android:id="@+id/ll_dev"
                android:layout_column="1"
                android:layout_span="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="DEV Option"/>
                <com.xuejian.client.lxp.common.widget.niceSpinner.NiceSpinner
                    android:id="@+id/sp_dev"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </TableRow>

        <TableRow
            android:id="@+id/logout_app"
            android:layout_marginTop="20dp"
            android:background="@drawable/option_cell_selector">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_span="3"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="退出登录"
                android:textColor="@color/red_add"
                android:textSize="15sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />
    </TableLayout>
</LinearLayout>