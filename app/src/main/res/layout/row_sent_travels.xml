<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp" >

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity" >

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_placeholder_round"  />

        <RelativeLayout
            android:id="@+id/rl_chatcontent"
            android:layout_width="185.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:layout_toLeftOf="@id/iv_userhead"
            android:paddingBottom="6dp"
            android:background="@drawable/chatto_taozi_bg">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:text="景点"
                android:layout_marginRight="6dp"
                android:textColor="@color/base_color_white"/>
            <ImageView
                android:id="@+id/iv_travels"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_common_default"
                android:layout_below="@id/tv_type"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@id/tv_type"
                android:maxLines="2"
                android:textSize="12sp"
                android:text="景点名称"
                android:layout_toLeftOf="@id/iv_travels"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/base_text_color_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_desc"
                android:layout_below="@id/iv_travels"
                android:textColor="@color/base_text_color_subtitle"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"
                android:text="景点描述"
                android:gravity="right"
                android:textSize="11sp"
                android:layout_marginBottom="4dp"
                android:maxLines="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

     <!--    <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@id/tv_chatcontent"
            android:layout_below="@id/iv_userhead"/> -->

        <ImageView
            android:id="@+id/msg_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rl_chatcontent"
            android:clickable="true"
            android:src="@drawable/msg_state_failed_resend"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/rl_chatcontent"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/rl_chatcontent"
            android:visibility="invisible"
            />

        <ProgressBar
            android:visibility="visible"
            android:id="@+id/pb_sending"
            android:layout_width="20dp"
            android:layout_height="20dp"
              android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rl_chatcontent"

            />
    </RelativeLayout>

</LinearLayout>