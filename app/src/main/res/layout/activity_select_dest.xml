<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_navigation_bar">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="30dp"
            android:text="取消"
            android:textColor="@color/selector_white_text_color" />

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_text_titlebar"
            android:text="选择目的地"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="32dp"
            android:paddingRight="12dp"
            android:text="下一步"
            android:textColor="@color/selector_white_text_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/des_selector"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/title_bar"
        android:background="@drawable/plan_country_top">

        <RelativeLayout
            android:id="@+id/ly_title_bar_center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
                android:id="@+id/in_out_indicator"
                android:layout_width="fill_parent"
                android:layout_height="29dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/in_out_indicator" />
        </RelativeLayout>

    </RelativeLayout>

    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/select_dest_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/des_selector" />

    <RelativeLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/plan_country_down"
        android:orientation="horizontal"
        android:visibility="visible">

        <HorizontalScrollView
            android:id="@+id/scroll_panel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/base_color_white"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_citys"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:visibility="invisible" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/des_pic_preview"
            android:layout_width="54dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/gray_line_round_bg"
            android:gravity="center"
            android:text="预览"
            android:textColor="@color/color_text_iii"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/des_selected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_text_iii"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>