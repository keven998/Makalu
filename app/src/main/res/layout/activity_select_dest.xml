<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_titlebar">

        <RelativeLayout
            android:id="@+id/ly_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tv_title_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:minWidth="60dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:singleLine="true"
                android:duplicateParentState="true"
                android:drawableLeft="@drawable/selector_city_detail_nav_back"
                android:gravity="center"
                android:textColor="@color/base_text_color_text_hint"
                android:drawablePadding="3dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_title_bar_center"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
                android:id="@+id/in_out_indicator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/ly_title_bar_center">

            <TextView
                android:id="@+id/tv_title_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="6dp"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/app_theme_color"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>


    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/select_dest_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"/>

    <FrameLayout android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <HorizontalScrollView android:id="@+id/scroll_panel"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginRight="75dp"
            android:layout_gravity="bottom"
            android:background="@color/app_theme_color_secondary"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_citys"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp"/>
        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:layout_gravity="right">

            <View android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="bottom"
                android:background="@color/app_theme_color_secondary"/>

            <View android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_white"/>

            <ImageView
                android:id="@+id/tv_start"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/selector_destination_selected"
                android:src="@drawable/ic_select_dest_done"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                />

        </FrameLayout>

    </FrameLayout>


</RelativeLayout>