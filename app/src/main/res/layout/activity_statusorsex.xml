<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/ss_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_white"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textSize="15sp"
            android:textColor="@color/base_font_color"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/ss_tv_first"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textSize="15sp"
            android:textColor="@color/base_font_color"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/ss_tv_second"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textSize="15sp"
            android:textColor="@color/base_font_color"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/ss_tv_third"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textSize="15sp"
            android:textColor="@color/base_font_color"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/ss_tv_fourth"/>

    </LinearLayout>


</LinearLayout>