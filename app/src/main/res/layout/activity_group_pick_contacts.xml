<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_add_contacts"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:layout_below="@id/ly_header_bar_title_wrap"
        android:background="@color/base_color_white"
        android:scrollbars="none"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/ly_header_bar_title_wrap"
        android:layout_height="fill_parent"
        android:layoutAnimation="@anim/layout_appear_meanwhile"
        android:orientation="vertical">

        <FrameLayout android:id="@+id/indexer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">
            <com.aizou.peachtravel.common.widget.TopSectionBar
                android:id="@+id/section_bar"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/base_color_white"
                android:spacing="16dp"
                android:overScrollMode="always"
                android:clickable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trangle_index_up"
                android:layout_gravity="bottom|center_horizontal"/>
        </FrameLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_backgroud"
            android:cacheColorHint="#00000000"
            android:layout_marginTop="10dp"
            android:descendantFocusability="afterDescendants"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:focusable="true"
            android:fastScrollEnabled="false" />
        </LinearLayout>



</RelativeLayout>