<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_add_contacts"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:layout_below="@id/ly_header_bar_title_wrap"
        android:background="@color/base_color_white"
        android:scrollbars="none"
        android:visibility="invisible"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_header_bar_title_wrap"
        android:background="@color/app_backgroud"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:fastScrollEnabled="false" />

</RelativeLayout>