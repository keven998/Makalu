<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_add_contacts"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@color/base_color_white"
        android:scrollbars="none" />

    <FrameLayout android:id="@+id/indexer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.aizou.peachtravel.common.widget.TopSectionBar
            android:id="@+id/section_bar"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_color_white"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:unselectedAlpha="0.8"
            android:overScrollMode="always"
            android:clickable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_indicator"
            android:layout_gravity="bottom|center_horizontal"/>
    </FrameLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indexer"
        android:background="@color/app_backgroud"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="10dp"
        android:descendantFocusability="afterDescendants"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:fastScrollEnabled="false" />

</LinearLayout>