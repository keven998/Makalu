<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@color/base_color_white"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:background="@color/base_color_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textColor="@color/base_text_color_title"
            android:textSize="15sp"
            android:text="当前密码: "/>

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:background="@null"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:hint="输入当前密码"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:paddingRight="10dp"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_marginLeft="15dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/base_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:textColor="@color/base_text_color_title"
            android:text="新密码: "/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:background="@null"
            android:textColor="@color/base_text_color_title"
            android:hint="设置新密码"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:singleLine="true"
            android:paddingLeft="6dp"
            android:textSize="15sp"
            android:paddingRight="10dp"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/base_border_color"
            android:layout_marginLeft="15dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/base_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:paddingLeft="15dp"
            android:text="确认新密码: "/>

        <EditText
            android:id="@+id/et_re_password"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:background="@null"
            android:textColor="@color/base_text_color_title"
            android:singleLine="true"
            android:hint="再次输入新密码"
            android:textColorHint="@color/base_text_color_text_placeholder"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"/>

    </LinearLayout>


    </LinearLayout>

    <!--<Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/base_color_white"
        android:background="@drawable/theme_button_selctor"
        android:text="确定"/>
-->
</LinearLayout>