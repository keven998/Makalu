<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_normal_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/strategy_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="@color/base_font_color"
                android:layout_gravity="center"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/third_font_color"
                android:text="请选择你要进行的操作"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/base_divider_color"/>


        <Button
            android:id="@+id/strategy_add_router"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme_color"
            android:background="@drawable/btn_white_selector"
            android:textSize="18sp"
            android:text="添加行程" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/base_divider_color"/>

        <Button
            android:id="@+id/strategy_add_day_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme_color"
            android:background="@drawable/btn_white_selector"
            android:textSize="18sp"
            android:text="加一天在前面" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/base_divider_color"/>

        <Button
            android:id="@+id/strategy_add_day_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme_color"
            android:background="@drawable/btn_white_selector"
            android:textSize="18sp"
            android:text="加一天在后面" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/base_divider_color"/>

        <Button
            android:id="@+id/strategy_del_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color_red"
            android:background="@drawable/btn_white_selector"
            android:textSize="18sp"
            android:text="删除这一天" />


    </LinearLayout>

    <Button
        android:id="@+id/strategy_btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/app_theme_color"
        android:background="@drawable/btn_white_selector"
        android:textSize="17sp"
        android:text="取消" />

</LinearLayout>