<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_cell_selector"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_save_type"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_save_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/iv_save_type"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/color_text_i"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_save_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_save_type"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/iv_save_type"
        android:gravity="left"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_text_iii"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_save_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_line" />

</RelativeLayout>

