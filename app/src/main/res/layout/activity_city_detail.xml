<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/city_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_top_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_backgroud"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_city_photo"
                android:orientation="vertical"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"
                >

                <RelativeLayout
                    android:id="@+id/top_Pic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <ImageView
                        android:id="@+id/iv_city_2"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_city_1"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_city_2"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/iv_city_3"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/iv_city_2"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_text_i"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_cost_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/color_text_iii"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/iv_city_5"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_city_4"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_city_5"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/iv_city_6"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/iv_city_5"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_pic_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/shape_black_panel"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:text="画册"
                    android:textColor="@color/base_color_white"
                    android:textSize="14sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_best_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/color_text_iii"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/app_backgroud" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_city_name_en"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:lines="2"
                        android:textColor="@color/second_font_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pic_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="7dp"
                        android:gravity="center"
                        android:text="全文"
                        android:textColor="@color/app_theme_color"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/temp"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">

                </View>

                <ImageView
                    android:id="@+id/tv_spots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@id/temp"
                    android:background="@drawable/btn_city_spot"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:onClick="intentToSpots"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/tv_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@id/tv_spots"
                    android:background="@drawable/btn_city_guide"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:onClick="intentToTravel"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/tv_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/temp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_city_food"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:onClick="intentToFood"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/tv_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/tv_restaurant"
                    android:layout_weight="1"
                    android:background="@drawable/btn_city_shopping"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:onClick="intentToShopping"
                    android:scaleType="centerCrop" />


            </RelativeLayout>

<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lv_city_detail"
    >

</ListView>
            <RelativeLayout
                android:id="@+id/fd"
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:background="@color/base_color_white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_backgroud" />


                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="～阅读更多·达人游记～"
                    android:textColor="@color/app_theme_color"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
    <!---->

    <!-- android:cachehintcolor-->
    <com.xuejian.client.lxp.common.widget.TitleHeaderBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

</RelativeLayout>