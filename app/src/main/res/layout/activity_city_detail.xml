<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/city_parent">

    <com.aizou.peachtravel.common.widget.pulltozoomview.PullToZoomListViewEx
        android:id="@+id/lv_city_detail"
        android:layout_marginTop="@dimen/title_bar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color_white"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:cacheColorHint="@color/app_backgroud"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:listSelector="@null"/>

    <!---->

   <!-- android:cachehintcolor-->
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_color_white">

        <ImageView
            android:id="@+id/tv_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_title_back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"/>

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp"
            android:text="城市详情"
            android:textColor="@color/base_font_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_bar_height"
                android:drawableLeft="@drawable/checker_title_ic_favorite"
                android:button="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>



            <ImageView
                android:id="@+id/city_detail_chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/city_share_chat"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                />




            <ImageView
                android:id="@+id/tv_title_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_bar_height"
                android:src="@drawable/city_add_strategy"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"/>

        </LinearLayout>


        <View
            android:id="@+id/title_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/app_theme_color"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


</RelativeLayout>