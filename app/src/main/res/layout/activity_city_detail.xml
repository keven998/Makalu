<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/content_top_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_backgroud"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:id="@+id/ly1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/selector_bg_city_album_panel"
                android:orientation="vertical"
                android:scaleType="fitCenter">

                <RelativeLayout
                    android:id="@+id/top_Pic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/iv_city_2"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_city_1"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_city_2"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/iv_city_3"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/iv_city_2"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/color_text_i"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_cost_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/color_text_iii"
                    android:textSize="11sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/iv_city_5"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_city_4"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/iv_city_5"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/iv_city_6"
                        android:layout_width="@dimen/page_detail_pic_height"
                        android:layout_height="@dimen/page_detail_pic_height"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/iv_city_5"
                        android:background="@drawable/city_bg_photo_default"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_best_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_text_iii"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_city_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:textColor="@color/color_text_ii"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_spots"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="intentToSpots"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_city_spot" />

                <ImageView
                    android:id="@+id/tv_travel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="intentToTravel"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_city_guide" />

                <ImageView
                    android:id="@+id/tv_restaurant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="intentToFood"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_city_food" />

                <ImageView
                    android:id="@+id/tv_shopping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="intentToShopping"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_city_shopping" />

            </LinearLayout>

            <ListView
                android:id="@+id/lv_city_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="6dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent" />

            <FrameLayout
                android:id="@+id/fd"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/tv_all_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_bg_city_album_panel"
                    android:gravity="center"
                    android:text="～阅读更多·达人游记～"
                    android:textColor="@color/app_theme_color"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_navigation_bar">

        <ImageView
            android:id="@+id/iv_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="30dp"
            android:scaleType="center"
            android:src="@drawable/selector_ic_nav_back" />

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_text_titlebar"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_create_plan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="14dp"
            android:scaleType="center"
            android:src="@drawable/selector_ic_create_plan" />

        <ImageView
            android:id="@+id/iv_talk_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_create_plan"
            android:paddingLeft="32dp"
            android:paddingRight="7dp"
            android:scaleType="center"
            android:src="@drawable/selector_ic_talk_share" />


    </RelativeLayout>

</FrameLayout>