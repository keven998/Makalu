<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="44dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_nav_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="30dp"
                android:scaleType="center"
                android:src="@drawable/selector_ic_nav_back" />

            <TextView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/color_text_ii"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_create_plan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="14dp"
                android:scaleType="center"
                android:src="@drawable/selector_btn_menu_add_navigationbar" />
            <!--selector_ic_create_plan-->

            <ImageView
                android:id="@+id/iv_talk_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/iv_create_plan"
                android:paddingLeft="32dp"
                android:paddingRight="7dp"
                android:scaleType="center"
                android:src="@drawable/navigation_talk" />
            <!--selector_ic_talk_share-->
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_backgroud"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/selector_bg_city_album_panel"
                    android:orientation="vertical"
                    android:scaleType="fitCenter">

                    <RelativeLayout
                        android:id="@+id/top_Pic"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/iv_city_2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="7dp"
                            android:background="@drawable/city_bg_photo_default"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_city_1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="7dp"
                            android:layout_toLeftOf="@id/iv_city_2"
                            android:background="@drawable/city_bg_photo_default"
                            android:scaleType="centerCrop" />


                        <ImageView
                            android:id="@+id/iv_city_3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="7dp"
                            android:layout_toRightOf="@id/iv_city_2"
                            android:background="@drawable/city_bg_photo_default"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_city_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_text_i"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_cost_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_text_iii"
                        android:textSize="11sp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/iv_city_5"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="7dp"
                            android:background="@drawable/city_bg_photo_default"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_city_4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="7dp"
                            android:layout_toLeftOf="@id/iv_city_5"
                            android:background="@drawable/city_bg_photo_default"
                            android:scaleType="centerCrop" />


                        <ImageView
                            android:id="@+id/iv_city_6"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="7dp"
                            android:layout_toRightOf="@id/iv_city_5"
                            android:background="@drawable/city_bg_photo_default"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_best_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_text_iii"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_city_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="2"
                    android:textColor="@color/color_text_ii"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_color_white"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/tv_travel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="intentToTravel"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_city_guide" />

                    <ImageView
                        android:id="@+id/tv_spots"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="intentToSpots"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_city_spot" />

                    <ImageView
                        android:id="@+id/tv_restaurant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="intentToFood"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_city_food" />

                    <ImageView
                        android:id="@+id/tv_shopping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="intentToShopping"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_city_shopping" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_color_white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/recommend_plan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn_city_plan"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="推荐行程"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/color_line" />

                    <TextView
                        android:id="@+id/recommend_note"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn_city_note"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="相关游记"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tv_all_expert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/base_color_white"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:text="当地达人"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/arrow_green_right"
                        android:paddingRight="11dp"
                        android:text="全部"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />

                <ListView
                    android:id="@+id/lv_city_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:divider="@color/color_line"
                    android:dividerHeight="1px" />

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/apply_expert"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_expert_apply"
                    android:visibility="gone"  />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/user_profile_bar"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_send_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_ic_city_button">

            <CheckedTextView
                android:id="@+id/tv_hasGone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/selector_ic_has_visited"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="去过"
                android:textColor="@color/color_text_ii"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_send_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_ic_city_button">

            <CheckedTextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/selector_ic_like"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="喜欢"
                android:textColor="@color/color_text_ii"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>