<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aizou.peachtravel.common.widget.pulltozoomview.PullToZoomListViewEx
        android:id="@+id/lv_city_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:listSelector="@null" />

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color">

        <ImageView
            android:id="@+id/tv_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentLeft="true"
            android:src="@drawable/selector_city_detail_nav_back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"/>

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="17sp"
            android:textColor="@color/base_color_white"/>

        <ImageView
            android:id="@+id/tv_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_ic_action_option"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"/>

    </RelativeLayout>


</RelativeLayout>