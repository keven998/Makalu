<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_frame_white_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_theme_color"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:scaleType="center"
                android:src="@drawable/ic_line_edit_delete"
                android:visibility="gone" />

            <TextView
                android:id="@+id/poi_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/base_color_white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/drag_nearby_tv"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingLeft="15dp"
                android:scaleType="center"
                android:src="@drawable/selector_ic_navigation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/poi_image_iv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_common_default"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/poi_address_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/poi_image_iv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/poi_image_iv"
                    android:maxLines="2"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/poi_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poi_address_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/poi_image_iv"
                    android:singleLine="true"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="11sp" />


                <RatingBar
                    android:id="@+id/poi_rating"
                    style="@style/custom_small_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poi_price_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/poi_image_iv"
                    android:rating="2.4" />

                <TextView
                    android:id="@+id/poi_rank_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/poi_price_tv"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/poi_rating"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="热度排名1"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="11sp" />

                <View
                    android:id="@+id/vw_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/poi_rating"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/poi_image_iv"
                    android:background="@color/base_divider_color" />

                <TextView
                    android:id="@+id/poi_comment_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vw_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/poi_image_iv"
                    android:textColor="@color/app_theme_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/poi_comment_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vw_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/poi_image_iv"
                    android:maxLines="2"
                    android:textColor="@color/base_text_color_subtitle"
                    android:textSize="13sp" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:scaleType="center"
                android:src="@drawable/ic_line_edit_drag"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
