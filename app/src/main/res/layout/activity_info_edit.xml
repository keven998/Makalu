<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/base_color_white">

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/selector_ic_nav_back"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/strategy_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/edit_user_info"
            android:textColor="@color/color_text_ii"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:singleLine="true"
            android:text="@string/save_info"
            android:textColor="@color/app_theme_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="姓" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/et_family_name"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/base_color_white"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/et_family_name_pinyin"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/base_color_white"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="名" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/base_color_white"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/et_name_pinyin"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/base_color_white"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="性别" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="52dp"
            android:paddingLeft="20dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_women"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="女"
                android:textColor="@color/color_text_iii"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                 />
            <RadioButton
                android:id="@+id/rb_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_iii"
                android:text="男"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="出生日期" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1.3"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="1990-11-04"
            />
        <ImageView
            android:id="@+id/iv_select_birthday"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_date_pick"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="电话" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />
        <EditText
            android:id="@+id/et_tel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="2"
            android:background="@color/base_color_white"
            android:textColor="@color/color_text_iii"
            android:textSize="14sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="13486467692" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="证件类别" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />
        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:background="@color/base_color_white"
            android:paddingLeft="20dp"
            android:dropDownVerticalOffset="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_text_ii"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="证件号码" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:textColor="@color/color_text_iii"
            android:background="@color/base_color_white"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:text="134676986423564" />
    </LinearLayout>
</LinearLayout>