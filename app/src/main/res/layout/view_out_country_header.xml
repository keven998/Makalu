<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/iv_country"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_common_default"
        android:visibility="gone"
        android:scaleType="centerCrop"/>

    <CheckedTextView
        android:id="@+id/tv_country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:background="@drawable/checker_cell_select_out_bg"
        android:paddingTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/select_out_dest_text_color"
       />

    <TextView
        android:id="@+id/tv_country_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_country"
        android:textSize="13sp"
        android:paddingTop="10dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:textColor="@color/base_text_color_text_hint"/>

</RelativeLayout>