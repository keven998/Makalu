<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backgroud"
    android:orientation="vertical"
    android:paddingRight="11dp"
    android:paddingLeft="11dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bar"
        android:paddingBottom="2dp"
        android:paddingLeft="14dp"
        android:paddingTop="2dp"
        android:textColor="@color/base_text_color_text_placeholder"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/selector_frame_white_card"
        android:duplicateParentState="true" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/avatar"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/base_text_color_title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/base_text_color_text_placeholder"
                android:textSize="11sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/red_circle"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>