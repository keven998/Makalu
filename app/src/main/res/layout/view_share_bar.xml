<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ddffffff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="14dp"
        android:text="分享到其它平台"
        android:textColor="@color/base_text_color_title"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dash"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_wxcircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share_wxcircle"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="朋友圈"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share_weixin"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="微信好友"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share_qq"
            android:gravity="center"
            android:text="QQ好友"
            android:drawablePadding="4dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share_qzone"
            android:gravity="center"
            android:text="QQ空间"
            android:drawablePadding="4dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share_sina"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="新浪微博"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_douban"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share_douban"
            android:gravity="center"
            android:text="豆瓣"
            android:drawablePadding="4dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="12sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dash"
        android:layerType="software"/>

    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="17sp"
        android:textColor="@color/theme_color"
        android:text="取消"
        android:textStyle="bold"
         />

</LinearLayout>