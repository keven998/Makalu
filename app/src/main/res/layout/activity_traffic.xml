<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/tab_bar_color">

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_arrow_left_white"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="14sp" />

        <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
            android:id="@+id/indicator"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_traffic_type"
        android:hint="飞机航班"
        android:textSize="16sp"
        android:textColorHint="@color/color_text_iv"
        android:textColor="@color/color_text_iii"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <EditText
            android:id="@+id/et_start"
            android:hint="起点"
            android:textSize="16sp"
            android:textColorHint="@color/color_text_iv"
            android:textColor="@color/color_text_iii"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_end"
            android:hint="终点"
            android:textSize="16sp"
            android:textColorHint="@color/color_text_iv"
            android:textColor="@color/color_text_iii"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:text="出发日期"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textColor="@color/color_text_iii"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="到达日期"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color_text_iii"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_time_setoff"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="未选择"
            android:gravity="center"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/app_theme_color"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_time_arrive"
            android:text="未选择"
            android:textSize="14sp"
            android:textColor="@color/app_theme_color"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_marginBottom="40dp"
        android:id="@+id/tv_save"
        android:background="@color/app_theme_color"
        android:gravity="center"
        android:textColor="@color/base_color_white"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="保存"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>