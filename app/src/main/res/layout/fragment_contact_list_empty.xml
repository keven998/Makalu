<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:textColor="#66fd5668"
        android:text="蜜蜜新标签-桃友"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:textSize="13sp"
        android:textColor="@color/base_text_color_text_hint"
        android:text="爱旅行的蜜蜜们之间的专属小天地~"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scroll_down_point"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"/>

    <Button android:id="@+id/add_friend"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/base_color_white"
        android:background="@drawable/app_theme_button_selector"
        android:text="加桃友"
        android:textSize="14sp"/>

</LinearLayout>