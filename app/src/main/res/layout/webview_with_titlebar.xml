<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <RelativeLayout android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/mm_listitem_simple" >

        <RelativeLayout
            android:id="@+id/ly_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tv_title_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:drawableLeft="@drawable/ic_navigation_back"
                android:duplicateParentState="true"
                android:text="返回"
                android:gravity="center"
                android:textColor="@color/base_text_color_text_hint"
                android:background="@drawable/btn_navigation_back_selector"
                android:drawablePadding="3dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_title_bar_center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="17sp"
                android:textColor="@color/base_text_color_title"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_bar_right_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_navigation_back_selector"
                android:textColor="@color/app_theme_color"
                android:layout_marginRight="3dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <CheckedTextView
                android:id="@+id/tv_title_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_navigation_back_selector"
                android:textColor="@color/app_theme_color"
                android:layout_marginRight="3dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <com.aizou.peachtravel.common.widget.NumberProgressBar
        android:id="@+id/numberbar1"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/ly_header_bar_title_wrap"
        custom:progress="0"
        custom:progress_text_visibility="invisible"
        style="@style/NumberProgressBar_Default"
        android:layout_height="1.5dp" />

    <WebView android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_header_bar_title_wrap">
    </WebView>

</RelativeLayout>
