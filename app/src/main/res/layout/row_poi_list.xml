<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_frame_white_card"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_gary_bg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_poi_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/btn_add"
                android:gravity="left|center_vertical"
                android:textSize="15sp"
                android:textColor="@color/base_text_color_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:layout_marginTop="3dp"/>
            <CheckedTextView android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/app_theme_button_selector"
                android:drawablePadding="2dp"
                android:gravity="right|center_vertical"
                android:text="选择"
                android:textSize="13sp"
                android:textColor="@color/base_color_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/poi_image_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/ll_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/poi_address_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/poi_image_iv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:maxLines="2"
            android:layout_marginRight="10dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/poi_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_address_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:singleLine="true"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="11sp" />


        <RatingBar
            android:id="@+id/poi_rating"
            style="@style/custom_small_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_price_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:rating="2.4" />

        <TextView
            android:id="@+id/poi_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/poi_price_tv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/poi_rating"
            android:gravity="right"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:textColor="@color/base_text_color_text_hint"
            android:textSize="11sp" />

        <View
            android:id="@+id/vw_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/poi_rating"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:background="@color/base_divider_color" />

        <TextView
            android:id="@+id/poi_comment_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vw_divider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:textColor="@color/app_theme_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/poi_comment_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_comment_username"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:maxLines="2"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="13sp" />

    </RelativeLayout>


</FrameLayout>