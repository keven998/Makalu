<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp">

        <CheckedTextView android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/app_theme_button_selector"
            android:drawablePadding="2dp"
            android:gravity="right|center_vertical"
            android:text="选择"
            android:textSize="13sp"
            android:textColor="@color/base_color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/btn_add"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/base_text_color_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:layout_marginTop="3dp"/>

        <View android:id="@+id/dot_divider"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@drawable/dash"
            android:layout_below="@id/tv_poi_name"
            android:layout_marginTop="5dp"
            android:layerType="software"/>

        <ImageView
            android:id="@+id/iv_poi_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dot_divider"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"/>

        <FrameLayout android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="#bbffffff"
            android:layout_alignLeft="@id/iv_poi_image"
            android:layout_alignBottom="@id/iv_poi_image"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <RatingBar
                android:id="@+id/ratingBar_poi"
                style="@style/custom_small_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dot_divider"
            android:layout_toLeftOf="@id/iv_poi_image"
            android:textSize="15sp"
            android:textColor="@color/app_theme_color"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"/>

        <TextView android:id="@+id/tv_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_price"
            android:layout_toLeftOf="@id/iv_poi_image"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="13sp"
            android:textColor="@color/base_text_color_subtitle"
            android:lineSpacingExtra="2dp"/>

        <RelativeLayout android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_poi_image">

            <View android:id="@+id/dot_divider1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@drawable/dash"
                android:layout_marginTop="10dp"
                android:layerType="software"/>

            <TextView android:id="@+id/tv_comment_num"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dot_divider1"
                android:layout_marginTop="6dp"
                android:drawablePadding="3dp"
                android:textSize="12sp"
                android:textColor="@color/base_text_color_text_hint"
                android:drawableLeft="@drawable/ic_comment_flag"
                android:textStyle="italic"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

            <TextView android:id="@+id/tv_comment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/tv_comment_num"
                android:layout_marginTop="7dp"
                android:layout_below="@id/dot_divider1"
                android:gravity="left"
                android:textSize="12sp"
                android:textColor="@color/base_text_color_text_hint"
                android:singleLine="true"/>

            <TextView android:id="@+id/tv_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_below="@id/tv_comment_name"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="@color/base_text_color_subtitle"
                android:maxLines="2"
                android:lineSpacingExtra="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>