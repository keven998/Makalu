<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/content_card"
        android:paddingBottom="10dp">

        <View
            android:id="@+id/vw_top"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/app_theme_color_secondary" />


        <ImageView
            android:id="@+id/poi_image_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/vw_top"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/poi_image_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/base_text_color_title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/poi_address_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_poi_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:maxLines="2"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/poi_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_address_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:singleLine="true"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="11sp" />


        <RatingBar
            android:id="@+id/poi_rating"
            style="@style/custom_small_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_price_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/poi_image_iv"
            android:rating="2.4" />

        <TextView
            android:id="@+id/poi_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/poi_rating"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/base_text_color_text_hint"
            android:textSize="11sp" />

        <CheckedTextView
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/app_theme_button_selector"
            android:drawablePadding="2dp"
            android:gravity="right|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="选择"
            android:textColor="@color/base_color_white"
            android:textSize="13sp" />


    </RelativeLayout>


</FrameLayout>