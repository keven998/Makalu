<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/delete_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_line_edit_delete"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fl_poi_image"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/poi_image_iv"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/poi_price_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/poi_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fl_poi_image" />
        <RatingBar
            android:id="@+id/poi_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_name_tv"
            android:layout_toRightOf="@id/fl_poi_image"
            style="@android:style/Widget.Holo.RatingBar.Small"/>
        <TextView
            android:id="@+id/poi_address_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poi_rating"
            android:layout_toRightOf="@id/fl_poi_image" />


    </RelativeLayout>

    <TextView
        android:id="@+id/nearby_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="周边" />

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_line_edit_drag"
        android:visibility="gone" />

</LinearLayout>