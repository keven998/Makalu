<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="9dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/line_top"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/base_border_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/ic_line_edit_delete"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/poi_image_iv"
                android:layout_width="52dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"/>

            <FrameLayout
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="#bbffffff"
                android:layout_alignLeft="@id/poi_image_iv"
                android:layout_alignBottom="@id/poi_image_iv"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">
                <RatingBar
                    android:id="@+id/poi_rating"
                    style="@style/custom_small_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/poi_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/poi_image_iv"
                android:layout_alignTop="@id/poi_image_iv"
                android:textSize="14sp"
                android:textColor="@color/base_text_color_title"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/poi_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="13sp"
                android:textColor="@color/app_theme_color"
                android:layout_marginTop="2dp"
                android:layout_below="@id/poi_name_tv"
                android:singleLine="true"
                android:layout_toRightOf="@id/poi_image_iv"/>

            <TextView
                android:id="@+id/poi_address_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/poi_image_iv"
                android:layout_toRightOf="@id/poi_image_iv"
                android:paddingTop="3dp"
                android:drawableLeft="@drawable/ic_time"
                android:singleLine="true"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/base_text_color_text_placeholder"/>

        </RelativeLayout>

        <Button
            android:id="@+id/drag_nearby_btn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:textColor="@color/main_botton_text_color"
            android:background="@drawable/checker_cell_frame_bg"
            android:text="周边" />

        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_line_edit_drag"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>