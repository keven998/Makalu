<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="9dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/line_top"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/base_border_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_time_point" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_white_bar">

            <ImageView
                android:id="@+id/iv_add_poi"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_phone_contact"/>

            <ImageView
                android:id="@+id/iv_delete_day"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:visibility="invisible"
                android:layout_toLeftOf="@id/iv_add_poi"
                android:src="@drawable/ic_line_edit_delete"/>

            <TextView
                android:id="@+id/tv_div"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/iv_delete_day"
                android:layout_alignWithParentIfMissing="true"
                android:textColor="@color/base_text_color_title"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_null"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="9dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/base_border_color" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_bar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_launcher"
                android:text="今天木有任何安排"
                android:padding="15dp"
                android:textSize="13sp"
                android:textColor="@color/base_text_color_subtitle"/>
        </FrameLayout>


    </LinearLayout>
</LinearLayout>