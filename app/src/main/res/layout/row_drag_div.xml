<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <View
        android:id="@+id/vw_top"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/app_theme_color" />

    <LinearLayout
        android:layout_below="@id/vw_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/base_color_white"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_day_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_theme_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/iv_add_poi"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_theme_secondary_selector"
                android:text="添加安排"
                android:textColor="@color/base_color_white"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_loc_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/iv_add_poi"
                android:layout_toRightOf="@id/tv_day_index"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:layout_alignBottom="@id/tv_day_index"
                android:textColor="@color/base_text_color_title"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_delete_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_line_edit_delete"
        android:visibility="gone" />
</RelativeLayout>