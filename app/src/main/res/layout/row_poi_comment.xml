<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_commenter_avatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_commenter_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="90dp"
        android:layout_toRightOf="@id/iv_commenter_avatar"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/color_text_iii"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_commenter_property"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_commenter_avatar"
        android:background="@drawable/message_bg_receive"
        android:ellipsize="middle"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/color_text_i"
        android:textSize="15sp" />

    <io.techery.properratingbar.ProperRatingBar
        android:id="@+id/rb_comment_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_commenter_property"
        android:layout_alignParentRight="true"
        app:prb_defaultRating="0"
        app:prb_tickSpacing="2dp"
        app:prb_tickNormalDrawable="@drawable/ic_rating_start_default"
        app:prb_tickSelectedDrawable="@drawable/ic_rating_start_highlight"
        app:prb_totalTicks="5"/>
</RelativeLayout>