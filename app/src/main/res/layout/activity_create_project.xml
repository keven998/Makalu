<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">
    <!--android:layout_marginTop="@dimen/title_bar_height"-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/app_backgroud"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_backgroud"
            android:orientation="vertical">


            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="联系人信息"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_address_book"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/select__contact"
                    android:textColor="@color/app_theme_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/dash_line_green"
                android:hardwareAccelerated="false"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/base_color_white"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="姓(英文)"
                            android:textColor="@color/color_text_iii" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icon_needed" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:hint="Last Name,如Zhang"
                        android:textColorHint="@color/color_text_v"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="名(英文)"
                            android:textColor="@color/color_text_iii" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icon_needed" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:hint="First Name,如Xiaoxiao"
                        android:textColorHint="@color/color_text_v"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:text="电话"
                            android:textColor="@color/color_text_iii" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icon_needed" />
                        <TextView
                            android:id="@+id/tv_dialCode"
                            android:text="+86"
                            android:layout_marginLeft="27dp"
                            android:gravity="center"
                            android:background="@drawable/bg_common"
                            android:textColor="@color/color_text_ii"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_tel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="125dp"
                        android:layout_marginRight="10dp"
                        android:inputType="phone"
                        android:hint="电话号码"
                        android:textColorHint="@color/color_text_v"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />


            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="出行信息"
                    android:textColor="@color/color_text_ii" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/dash_line_green"
                android:hardwareAccelerated="false"
                android:layerType="software" />
            <RelativeLayout
                android:id="@+id/rl_setoff"
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="出发城市"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_setOff_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="100dp"
                    android:drawablePadding="2dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/iv1"
                    android:textColor="@color/color_text_iii" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="出发日期"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/date_title"
                    android:textColor="@color/app_theme_color" />

                <TextView
                    android:id="@+id/tv_select_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_gray"
                    android:drawableLeft="@drawable/icon_date_pick"
                    android:drawablePadding="2dp"
                    android:padding="4dp"
                    android:text="@string/select_date"
                    android:textColor="@color/color_text_iii" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />

            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="出行天数"
                    android:textColor="@color/color_text_ii" />

                <com.xuejian.client.lxp.common.widget.NumberPicker
                    android:id="@+id/select_day_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="出游人数"
                    android:textColor="@color/color_text_ii" />

                <com.xuejian.client.lxp.common.widget.NumberPicker
                    android:id="@+id/select_traveller_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/base_color_white">
                <TextView
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="含"
                    android:textColor="@color/color_text_ii"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"/>
                <CheckedTextView
                    android:id="@+id/ctv_child"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="儿童"
                    android:textColor="@color/color_text_ii"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/checker_for_checkbox"/>
                <CheckedTextView
                    android:id="@+id/ctv_elder"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老人"
                    android:textColor="@color/color_text_ii"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/checker_for_checkbox"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="总预算"
                    android:textColor="@color/color_text_ii" />

                <EditText
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_common_without_corner"
                    android:drawablePadding="2dp"
                    android:hint="   元"
                    android:textColorHint="@color/color_text_iv"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:inputType="number"
                    android:paddingBottom="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_text_iv" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />

            <RelativeLayout
                android:background="@color/base_color_white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="旅行信息"
                    android:textColor="@color/color_text_ii" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/dash_line_green"
                android:hardwareAccelerated="false"
                android:layerType="software" />
            <RelativeLayout
                android:id="@+id/rl_target"
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="旅行城市"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_target_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="100dp"
                    android:drawablePadding="2dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/iv2"
                    android:textColor="@color/color_text_iii" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:id="@+id/rl_service"
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="服务包含"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="100dp"
                    android:drawablePadding="2dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/iv3"
                    android:textColor="@color/color_text_iii" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />
            <RelativeLayout
                android:id="@+id/rl_theme"
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="主题偏向"
                    android:textColor="@color/color_text_ii" />

                <TextView
                    android:id="@+id/tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="2dp"
                    android:singleLine="true"
                    android:layout_marginLeft="100dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/iv4"
                    android:textColor="@color/color_text_iii" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line" />



            <LinearLayout
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@color/base_color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:text="其他需求"
                            android:textColor="@color/color_text_ii" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|top"
                        android:hint="限500字"
                        android:textColorHint="@color/color_text_iii"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/color_text_ii"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/bg_common"
                        android:lines="4" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_action_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_submit_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:background="@color/app_theme_color"
                    android:gravity="center"
                    android:text="@string/next_step"
                    android:textColor="@color/base_color_white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/tab_bar_color">

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_arrow_left_white"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="个人定制"
            android:textColor="@color/base_color_white"
            android:textSize="18sp" />


    </RelativeLayout>
</FrameLayout>