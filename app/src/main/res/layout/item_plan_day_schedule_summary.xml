<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/base_color_white">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:id="@+id/ll_day"
        android:background="@drawable/plan_02_bg_day"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_day_index"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:textColor="@color/base_color_white"
            android:textSize="17sp"
            android:text="02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="top"
            android:textColor="@color/base_color_white"
            android:textSize="12sp"
            android:text="Day"/>
    </LinearLayout>

    <TextView android:id="@+id/tv_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_i"
        android:textSize="17sp"
        android:layout_toRightOf="@id/ll_day"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"/>

    <TextView android:id="@+id/tv_schedule_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_ii"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:layout_toRightOf="@id/ll_day"
        android:lineSpacingExtra="5dp"
        android:gravity="left|center_vertical"/>

</RelativeLayout>
