<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_dotview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color_white"
    tools:context=".TravelFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/operation_section_height">

        <com.aizou.core.widget.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/vp_travel"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/title_bar_height"
            android:background="#f3d4df" />

        <com.aizou.core.widget.DotView
            android:id="@+id/dot_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="18dp"
            cube_dotview:dot_radius="3dp"
            cube_dotview:dot_selected_color="0xfffd818e"
            cube_dotview:dot_span="10dp"
            cube_dotview:dot_unselected_color="0xffffffff" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/nav_title_bar">

            <ImageView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/home_title_image"/>

            <ImageView
                android:id="@+id/tv_title_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingRight="8dp"
                android:paddingLeft="12dp"
                android:src="@drawable/selector_ic_create_new_plan"/>

        </FrameLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="4dp"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bkg_linked_dots"
        android:orientation="horizontal"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/my_guides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/titleview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/deco_dots"
                    android:gravity="center"
                    android:text="旅程助手"
                    android:textColor="@color/app_theme_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_guide_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleview"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="5dp"
                    android:minLines="3"
                    android:text="最贴心的旅程助手\n旅行可以\n更安心、简单"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_guide_desc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_circle"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="我的\n旅程"
                    android:textColor="@color/app_theme_color_secondary"
                    android:textSize="18sp" />

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/my_around"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/titleview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/deco_dots"
                    android:text="身边发现"
                    android:textColor="@color/app_theme_color"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_around_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleview1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="5dp"
                    android:text="旅途有发现\n发现途中的灵感\n发现当下的乐趣"
                    android:textColor="@color/base_text_color_text_placeholder"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_around_desc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_circle"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="发现\n身边"
                    android:textColor="@color/app_theme_color_secondary"
                    android:textSize="18sp" />

            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>



</LinearLayout>
