<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TravelFragment">
    <com.aizou.peachtravel.common.widget.TitleHeaderBar
        android:id="@+id/ly_header_bar_title_wrap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.aizou.core.widget.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/vp_travel"
            android:layout_width="fill_parent"
            android:layout_height="176dp"/>

        <LinearLayout android:id="@+id/ll_weather"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#60000000">
            <ImageView
                android:id="@+id/iv_weather"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView android:id="@+id/tv_weather"
                android:layout_width="fill_parent"
                android:layout_marginLeft="11dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/base_color_white"/>
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/tool_title"
            android:textSize="17sp"
            android:textColor="@color/base_text_color_subtitle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_my_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旅行Memo"
                android:textSize="12sp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_launcher"
                android:textColor="@color/base_text_color_title"/>
            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:text="收藏夹"
                android:textSize="12sp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_launcher"
                android:textColor="@color/base_text_color_title"/>
            <TextView
                android:id="@+id/tv_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我身边"
                android:textSize="12sp"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_launcher"
                android:gravity="center"
                android:textColor="@color/base_text_color_title"/>

        </LinearLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_lxq"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:text="桃·Talk"
        android:background="@color/btn_blue_normal"
        />

</LinearLayout>
