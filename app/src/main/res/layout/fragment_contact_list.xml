<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/color_line"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:listSelector="@android:color/transparent" />

    <com.aizou.core.widget.SideBar
        android:id="@+id/sb_index"
        android:layout_width="16dp"
        android:layout_height="384dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_sub_theme"
        android:gravity="center"
        android:textColor="@color/base_color_white"
        android:textSize="28sp"
        android:visibility="gone" />

</RelativeLayout>