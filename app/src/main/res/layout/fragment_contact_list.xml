<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <EditText
        android:id="@+id/contact_search_tv"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_search"
        android:gravity="center"
        android:hint="姓名或拼音的首字母"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/base_color_black"
        android:textSize="16sp"
        android:background="@drawable/in_out_search_bg"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/app_backgroud"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/base_divider_color"
        android:dividerHeight="0.75dp"
        android:fastScrollEnabled="true"
        android:focusable="true" />

    <com.aizou.core.widget.SideBar
        android:id="@+id/sb_index"
        android:layout_width="16dp"
        android:layout_height="384dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_sub_theme"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/base_color_white"
        android:textSize="28sp"
        android:visibility="gone" />

    <include
        android:id="@+id/empty_view"
        layout="@layout/fragment_contact_list_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:visibility="gone"></include>

</RelativeLayout>