<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >


    <FrameLayout android:id="@+id/indexer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <com.aizou.peachtravel.common.widget.TopSectionBar
            android:id="@+id/section_bar"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@color/base_color_white"
            android:spacing="16dp"
            android:overScrollMode="always"
            android:clickable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_indicator"
            android:layout_gravity="bottom|center_horizontal"/>
    </FrameLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indexer"
        android:background="@color/app_backgroud"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="10dp"
        android:descendantFocusability="afterDescendants"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:fastScrollEnabled="true" />

    <include layout="@layout/fragment_contact_list_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indexer"
        android:layout_marginTop="72dp"
        android:id="@+id/empty_view"></include>

</RelativeLayout>