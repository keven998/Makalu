<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/app_theme_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_card"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:id="@+id/tv_poi_want_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_poi_guide"
            android:gravity="center"
            android:textColor="@color/app_theme_color"
            android:textSize="14sp"
            android:text="吃什么"
            android:paddingBottom="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_city_poi_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_poi_want_type"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:textColor="@color/base_text_color_subtitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_city_poi_desc"
            android:drawablePadding="5dp"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/arr_poi_guide"
            android:text="更多" />
    </RelativeLayout>
</LinearLayout>


