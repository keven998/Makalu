<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_plan_item">

        <TextView
            android:id="@+id/tian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:textColor="@color/base_color_white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/my_plan_title_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/tian"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/tian"
            android:gravity="right"
            android:singleLine="true"
            android:text="天"
            android:textColor="@color/base_color_white"
            android:textSize="21sp" />


        <TextView
            android:id="@+id/citys_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/citys_tv"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/rl_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="24dp"
                android:paddingLeft="7dp"
                android:paddingRight="25dp"
                android:paddingTop="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_ic_plan_sign" />


            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_check"
                android:paddingBottom="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="17dp"
                android:paddingTop="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_ic_plan_delete" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_send"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:padding="2.5dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:background="@drawable/plan_icon_send_bg">
            <CheckedTextView
                android:id="@+id/btn_send"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/selecter_theme_btn_radius_4"
                android:text="发送"
                android:textColor="@color/base_color_white"
                android:textSize="13sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/rl_action"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/plan_bg_page_spot_zhedang" />


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_check_status"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="86dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plan_bg_page_dao"
        />
</RelativeLayout>

</FrameLayout>