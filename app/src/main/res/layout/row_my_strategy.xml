<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="14dp"
        android:background="@drawable/selector_plan_item">

        <TextView
            android:id="@+id/tian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:textColor="@color/base_color_white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/my_plan_title_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/tian"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/tian"
            android:gravity="right"
            android:singleLine="true"
            android:text="å¤©"
            android:textColor="@color/base_color_white"
            android:textSize="21sp" />


        <TextView
            android:id="@+id/citys_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/citys_tv"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/rl_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="24dp"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plan_10_dashboard_share" />

            <ImageView
                android:id="@+id/iv_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_check"
                android:paddingBottom="24dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plan_10_dashboard_copy" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_modify_name"
                android:paddingBottom="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="6dp"
                android:paddingTop="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plan_10_dashboard_edit" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/rl_action"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/plan_bg_page_spot_zhedang" />

        <ImageView
            android:id="@+id/iv_check_status"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_action"
            android:scaleType="fitCenter"
            android:src="@drawable/plan_bg_page_dao"
            android:visibility="gone" />
    </RelativeLayout>


</FrameLayout>