<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/plan_status_planned">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/my_plan_title_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="27dp"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:textColor="@color/color_text_ii"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/citys_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tian"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_ii"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/citys_tv"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="@color/color_text_ii"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="24dp"
                android:paddingLeft="7dp"
                android:paddingRight="25dp"
                android:paddingTop="7dp"
                android:scaleType="center"
                android:src="@drawable/selector_ic_plan_sign" />


            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_check"
                android:paddingBottom="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:scaleType="center"
                android:src="@drawable/selector_ic_plan_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_send"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_send_normal_shape"
            android:gravity="center"
            android:padding="2dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:visibility="gone"
            >

            <CheckedTextView
                android:id="@+id/btn_send"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@color/base_color_white"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/color_text_ii"
                android:textSize="12sp" />
        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_check_status"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="102dp"
            android:layout_marginTop="53dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plan_bg_page_dao" />
    </RelativeLayout>

</FrameLayout>