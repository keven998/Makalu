<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rl_plan"
        android:background="@drawable/selector_plan_item">

        <TextView
            android:id="@+id/tian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/base_color_white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/my_plan_title_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/tian"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="9sp"
            />

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/tian"
            android:gravity="right"
            android:text="å¤©"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="21sp"
            />


        <TextView
            android:id="@+id/citys_tv"
            android:layout_width="@dimen/my_plan_title_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tian"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:ellipsize="end"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/citys_tv"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/base_color_white"
            android:textSize="9sp" />

        <RelativeLayout
            android:id="@+id/rl_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/plan_10_dashboard_share"
                android:padding="5dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/iv_delete"
                android:background="@drawable/plan_10_dashboard_copy"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_modify_name"
                android:background="@drawable/plan_10_dashboard_edit"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/rl_action"
            android:background="@drawable/plan_bg_page_spot_zhedang"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/iv_check_status"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_action"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/plan_bg_page_qian"
            android:visibility="gone"
            android:scaleType="centerCrop" />
    </RelativeLayout>


</LinearLayout>