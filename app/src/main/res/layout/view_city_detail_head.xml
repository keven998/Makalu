<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <FrameLayout android:id="@+id/ly1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/city_picture_collection_height">

        <ImageView
            android:id="@+id/iv_city_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_common_default"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_pic_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="画册"
            android:layout_gravity="bottom|center"
            android:background="@drawable/shape_black_panel"
            android:textColor="@color/base_color_white"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"/>

        <CheckBox
            android:id="@+id/iv_fav"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/checker_title_ic_favorite"
            android:button="@null"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/ly1"
        android:layout_marginTop="-20dp">
        <ImageView android:id="@+id/tv_travel"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:textColor="@color/base_color_white"
            android:textSize="14sp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/selector_ic_city_guide"
            android:onClick="intentToTravel"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@color/base_text_color_subtitle"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_travel"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/tv_city_name_en"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:textColor="@color/base_text_color_text_placeholder"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_travel"
            android:layout_below="@id/tv_city_name"/>

    </RelativeLayout>

    <LinearLayout android:id="@+id/ly_event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_card"
        android:layout_below="@id/ly2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fe828f"/>

        <TextView android:id="@+id/travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/base_text_color_title"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_cost_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/base_text_color_subtitle"/>

        <com.aizou.core.widget.expandabletextview.ExpandableTextView
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_best_month"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            expandableTextView:animDuration="200"
            expandableTextView:maxCollapsedLines="2"
            expandableTextView:animAlphaStart="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            expandableTextView:expandDrawable="@drawable/expand_drawable"
            expandableTextView:collapseDrawable="@drawable/collapase_drawable"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/base_text_color_subtitle" />

            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="-4dp"
                android:layout_gravity="right|bottom"
                android:paddingLeft="100dp"
                android:scaleType="center"
                android:background="@null" />
        </com.aizou.core.widget.expandabletextview.ExpandableTextView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <com.aizou.peachtravel.common.widget.DrawableCenterTextView
                android:id="@+id/tv_spots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/theme_color"
                android:background="@drawable/city_detail_content_button"
                android:drawableTop="@drawable/ic_city_spot_selector"
                android:drawablePadding="-5dp"
                android:textSize="17sp"
                android:paddingTop="8dp"
                android:onClick="intentToFood"
                android:text="景点"/>

            <com.aizou.peachtravel.common.widget.DrawableCenterTextView
                android:id="@+id/tv_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/theme_color"
                android:background="@drawable/city_detail_content_button"
                android:drawableTop="@drawable/ic_city_delicious_selector"
                android:drawablePadding="-5dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:paddingTop="8dp"
                android:onClick="intentToFood"
                android:text="美食"/>

            <com.aizou.peachtravel.common.widget.DrawableCenterTextView
                android:id="@+id/tv_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/city_detail_content_button"
                android:drawableTop="@drawable/ic_city_shopping_selector"
                android:drawablePadding="-5dp"
                android:textColor="@color/theme_color"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:paddingTop="8dp"
                android:onClick="intentToShopping"
                android:text="购物"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_event"
        android:background="@color/base_color_white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="精选游记"
            android:layout_marginLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"
            android:textColor="@color/app_theme_color_secondary"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"
            android:text="更多精选游记"
            android:textColor="@color/secondary_theme_color"
            android:drawableRight="@drawable/app_them_arrow_secondary"
            android:drawablePadding="2dp"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_theme_color_secondary"></View>

    </RelativeLayout>

</RelativeLayout>