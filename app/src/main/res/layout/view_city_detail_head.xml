<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_frame_white_card"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/base_color_white"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/iv_city_detail"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_common_default"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_pic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"
                android:background="#55000000"
                android:textColor="@color/base_color_white"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:textColor="@color/base_text_color_title"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_unfav" />

        </LinearLayout>
            <com.aizou.core.widget.expandabletextview.ExpandableTextView
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_city_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                expandableTextView:animDuration="200"
                expandableTextView:maxCollapsedLines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/base_color_white"
                >

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/base_text_color_subtitle" />

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent" />
            </com.aizou.core.widget.expandabletextview.ExpandableTextView>


        <View
            android:layout_width="fill_parent"
            android:background="@drawable/dash"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layerType="software"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="推荐游玩时间："
                android:lineSpacingExtra="5dp"
                android:textColor="@color/base_text_color_title"/>
            <TextView
                android:id="@+id/tv_cost_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/base_text_color_subtitle"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="最佳旅行时节："
                    android:textColor="@color/base_text_color_title"/>
                <TextView
                    android:id="@+id/tv_best_month"
                    android:layout_width="fill_parent"
                    android:textSize="12sp"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/base_text_color_subtitle"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_frame_white_card"
        android:orientation="horizontal">
        <com.aizou.peachtravel.common.widget.DrawableCenterTextView
            android:id="@+id/tv_travel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="@color/base_text_color_title"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_standard_travel"
            android:background="@drawable/option_cell_selector"
            android:onClick="intentToTravel"
            android:text="玩"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/base_divider_color"
            />
        <com.aizou.peachtravel.common.widget.DrawableCenterTextView
            android:id="@+id/tv_restaurant"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/base_text_color_title"
            android:background="@drawable/option_cell_selector"
            android:textSize="14sp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_standard_food"
            android:onClick="intentToFood"
            android:text="吃"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/base_divider_color"
            />
        <com.aizou.peachtravel.common.widget.DrawableCenterTextView
            android:id="@+id/tv_shopping"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_standard_shopping"
            android:background="@drawable/option_cell_selector"
            android:textColor="@color/base_text_color_title"
            android:textSize="14sp"
            android:onClick="intentToShopping"
            android:text="买"/>

    </LinearLayout>

</LinearLayout>