<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/more_top_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/base_color_white_trans"
        android:layout_marginBottom="1px"
        >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/base_font_color" />

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="10dp"
        android:textColor="@color/base_font_color"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/more_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1px"
        >

    <TextView
        android:id="@+id/dia_tv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/dialog_press_text_color"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/top2_whitesolid_background"
        android:gravity="center"
        />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/more_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1px"
        >

    <TextView
        android:id="@+id/dia_tv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/dialog_press_text_color"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/more_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1px"
        >

    <TextView
        android:id="@+id/dia_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/dialog_press_text_color"
        android:background="@drawable/bot2_whitesolid_background"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/more_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dia_tv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/dialog_press_text_color"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/all_whitesolid_background"
            android:gravity="center"
            />

    </LinearLayout>

<!--chat_add_down    chat_add_middle   chat_add_middle_copy  chat_add_top-->

</LinearLayout>