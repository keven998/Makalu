<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:f="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_cell_selector"
    android:orientation="vertical"
    >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">
    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/expert_country_list_bg"/>
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@color/minhalf_transparent_color"
        android:text="保的家庭酒店"
        android:textColor="@color/base_color_white"
        android:textSize="19sp"
        android:layout_marginBottom="17dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_goods_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="韩国"
        android:textSize="15sp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/search_total_place"
        android:textColor="@color/base_color_white"
        android:layout_gravity="bottom|left"
        />
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_price"
            />
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|top"
                android:gravity="center"
                android:textSize="12sp"
                android:text="¥2342"/>
            <TextView
                android:id="@+id/tv_goods_current_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/base_color_white"
                android:text="¥2342"/>
        </LinearLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="bottom|left"
        android:textColor="@color/color_text_ii"
        android:drawablePadding="2dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:drawableLeft="@drawable/icon_recommend_tag"
        android:text="保的家庭酒店"/>
</FrameLayout>
    <com.xuejian.client.lxp.common.widget.TagView.TagListView
        android:id="@+id/goods_tag"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        f:horizontalSpace="6dp"
        android:layout_gravity="center_vertical"
        f:orientation="horizontal"
        f:verticalSpace="4dp" />

</LinearLayout>