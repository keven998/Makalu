<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"

        >

        <com.aizou.core.widget.pagerIndicator.indicator.FixedIndicatorView
            android:id="@+id/densty_indicator"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:divider="@null"
            android:showDividers="none"
            android:dividerPadding="0dp"

            /><!---->
       <ImageView
            android:id="@+id/desty_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/check_more_desty"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="right|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:singleLine="true"

             />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line"
            android:layout_gravity="bottom"
            />
    </FrameLayout>
    <com.aizou.core.widget.pagerIndicator.viewpager.FixedViewPager
        android:id="@+id/densty_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>